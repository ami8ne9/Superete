<UserControl x:Class="Superete.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5BA0F2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A80D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Numeric Keypad Button Style -->
        <Style x:Key="NumericButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clear Button Style -->
        <Style x:Key="ClearButtonStyle" TargetType="Button" BasedOn="{StaticResource NumericButtonStyle}">
            <Setter Property="Background" Value="#FF6B6B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF7B7B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF5B5B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enter Button Style -->
        <Style x:Key="EnterButtonStyle" TargetType="Button" BasedOn="{StaticResource NumericButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#32B749"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E7E34"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4A90E2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Shadow Effects -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="Black"
                          Opacity="0.1"
                          BlurRadius="20"
                          ShadowDepth="0"
                          Direction="270"/>

        <DropShadowEffect x:Key="SubtleShadow"
                          Color="Black"
                          Opacity="0.08"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Direction="270"/>

        <DropShadowEffect x:Key="ButtonShadow"
                          Color="Black"
                          Opacity="0.15"
                          BlurRadius="12"
                          ShadowDepth="3"
                          Direction="270"/>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <!-- Main Login Card -->
        <Border Width="1100" Height="700"
                Background="White"
                CornerRadius="16"
                Effect="{StaticResource CardShadow}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" >

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Welcome and Password Input -->
                <StackPanel Grid.Column="0" Margin="50,40" VerticalAlignment="Center">
                    <!-- Logo/Branding Area -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,40">
                        <Border Width="60" Height="60"
                                Background="#4A90E2"
                                CornerRadius="30"
                                Margin="0,0,15,0">
                            <TextBlock Text="SGE"
                                       FontFamily="Segoe UI"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Système de Gestion d'Entreprise"
                                       FontFamily="Segoe UI"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"/>
                            <TextBlock Text="Portail d'Accès Sécurisé"
                                       FontFamily="Segoe UI"
                                       FontSize="14"
                                       Foreground="#666666"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Welcome Message -->
                    <TextBlock Text="Bienvenue !"
                               FontFamily="Segoe UI"
                               FontSize="28"
                               FontWeight="Light"
                               Foreground="#333333"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Veuillez entrer votre mot de passe pour accéder au système"
                               FontFamily="Segoe UI"
                               FontSize="14"
                               Foreground="#666666"
                               Margin="0,0,0,40"/>

                    <!-- Password Input -->
                    <TextBlock Text="Mot de passe"
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#333333"
                               Margin="0,0,0,8"/>

                    <PasswordBox x:Name="PasswordInput" MaxLength="9"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Width="332"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,30" BorderThickness="1" BorderBrush="Black" PreviewTextInput="PasswordInput_PreviewTextInput"
             PreviewKeyDown="PasswordInput_PreviewKeyDown"/>

                </StackPanel>

                <!-- Right Panel - Numeric Keypad -->
                <Border Grid.Column="1" 
        Background="#FAFBFC"
        CornerRadius="0,16,16,0"
        Padding="60">
                    <Grid>
                        <!-- Shutdown Button - Top Right -->
                        <Button Width="41" Height="41"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,-41,-43,0"
                Content="⏻"
                Background="#EF4444"
                Foreground="White"
                FontSize="18"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand" x:Name="BtnShutdown" Click="BtnShutdown_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Ellipse Fill="{TemplateBinding Background}"/>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Keypad Content -->
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Pavé Numérique"
                   FontFamily="Segoe UI"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"/>

                            <TextBlock Text="Utilisez le pavé pour une saisie sécurisée"
                   FontFamily="Segoe UI"
                   FontSize="16"
                   Foreground="#666666"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,35"/>

                            <!-- Numeric Keypad -->
                            <Grid Width="400">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="80"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="1" Grid.Row="0" Grid.Column="0"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn1" FontSize="28"/>
                                <Button Content="2" Grid.Row="0" Grid.Column="1"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn2" FontSize="28"/>
                                <Button Content="3" Grid.Row="0" Grid.Column="2"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn3" FontSize="28"/>

                                <Button Content="4" Grid.Row="1" Grid.Column="0"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn4" FontSize="28"/>
                                <Button Content="5" Grid.Row="1" Grid.Column="1"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn5" FontSize="28"/>
                                <Button Content="6" Grid.Row="1" Grid.Column="2"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn6" FontSize="28"/>

                                <Button Content="7" Grid.Row="2" Grid.Column="0"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn7" FontSize="28"/>
                                <Button Content="8" Grid.Row="2" Grid.Column="1"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn8" FontSize="28"/>
                                <Button Content="9" Grid.Row="2" Grid.Column="2"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn9" FontSize="28"/>

                                <Button Content="Effacer" Grid.Row="3" Grid.Column="0"
                    Style="{StaticResource ClearButtonStyle}"
                    Margin="4" x:Name="BtnClear" FontSize="16"/>
                                <Button Content="0" Grid.Row="3" Grid.Column="1"
                    Style="{StaticResource NumericButtonStyle}"
                    Margin="4" x:Name="Btn0" FontSize="28"/>
                                <Button Content="⌫" Grid.Row="3" Grid.Column="2"
                    Style="{StaticResource ClearButtonStyle}"
                    Margin="4" x:Name="BtnDelete" FontSize="24"/>

                                <Button Content="ENTRÉE" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                    Style="{StaticResource EnterButtonStyle}"
                    Margin="4" x:Name="BtnEnter"
                    FontSize="28" Click="BtnEnter_Click"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>