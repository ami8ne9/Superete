<Window x:Class="GestionComerce.Main.Settings.WDeleteRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Border CornerRadius="10" Background="White">
        <Grid Margin="10,20,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Message Text -->
            <TextBlock 
                       Text="Are you sure you want to delete this Role?" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"
                       FontSize="14"
                       TextWrapping="Wrap" Width="280" Margin="10,0,0,0"/>
            <!-- Buttons -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button Name="ConfirmButton" 
                        Content="Confirm" 
                        Width="80" 
                        Height="30" 
                        Margin="0,0,10,0"
                        Background="#FF03A90D" 
                        Foreground="White" 
                        BorderBrush="White" 
                        BorderThickness="4,1,2,1" 
                        RenderTransformOrigin="0.5,0.5" Click="ConfirmButton_Click_1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button Name="CancelButton" 
                        Content="Cancel" 
                        Width="80" 
                        Height="30"
                        IsCancel="True"
                        Background="#FFFF5200" 
                        Foreground="White" 
                        BorderBrush="White" 
                        BorderThickness="4,1,4,1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
