<Window x:Class="Superete.Main.Settings.WUpdateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Registration" Height="416" Width="500"
        Background="#F5F5F5" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">

    <Window.Resources>
        <!-- Custom Button Style -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="25" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="InputPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>


        <!-- ComboBox Style -->
        <Style  TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
            <Border Background="#4A90E2" CornerRadius="25" Width="50" Height="50" Margin="0,0,15,0">
                <TextBlock Text="👤" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            </Border>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="MODIFIER UTILISATEUR" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                <TextBlock Text="Modifier un utilisateur existant" FontSize="12" Foreground="#666" Margin="0,2,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Form Section -->
        <StackPanel Grid.Row="1" >
            <!-- Full Name Field -->
            <StackPanel>
                <TextBlock Text="Nom complet *" FontWeight="SemiBold" FontSize="14" Foreground="#333" Margin="0,0,0,8"/>
                <TextBox x:Name="Name" Style="{StaticResource InputTextBoxStyle}"/>
            </StackPanel>


            <!-- Password Field -->
            <StackPanel>
                <TextBlock Text="Mot de passe *" FontWeight="SemiBold" FontSize="14" Foreground="#333" Margin="0,0,0,8"/>
                <PasswordBox x:Name="Code" Style="{StaticResource InputPasswordBoxStyle}" PreviewTextInput="PasswordInput_PreviewTextInput"
             PreviewKeyDown="PasswordInput_PreviewKeyDown"/>
            </StackPanel>
            <StackPanel Width="438">
                <TextBlock Text="Rôle *" FontWeight="SemiBold" FontSize="14" Foreground="#333" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="Roles" Width="438" />
                </StackPanel>

            </StackPanel>

            <!-- Role Field -->
        </StackPanel>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cancel Button -->
            <Button Grid.Column="0" 
                    x:Name="CancelButton"
                    Content="✕ Annuler" 
                    Height="45" 
                    FontSize="14" 
                    FontWeight="SemiBold"
                    Background="#E74C3C" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Style="{StaticResource RoundButtonStyle}"
                    Cursor="Hand" Click="CancelButton_Click"
                   />

            <!-- Register Button -->
            <Button Grid.Column="2" 
                    x:Name="RegisterButton"
                    Content="✓ Enregistrer" 
                    Height="45" 
                    FontSize="14" 
                    FontWeight="SemiBold"
                    Background="#4A90E2" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Style="{StaticResource RoundButtonStyle}"
                    Cursor="Hand" Click="RegisterButton_Click"
                    />
        </Grid>

        <!-- Floating Action Button -->

    </Grid>
</Window>
