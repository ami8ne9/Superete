<UserControl x:Class="Superete.Main.Inventory.CSingleArticleI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40">
    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="White" Margin="0,0,0,-15" CornerRadius="4">
        <Grid Margin="24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <!-- Article ID -->
                <ColumnDefinition Width="120"/>
                <!-- Code -->
                <ColumnDefinition Width="*"/>
                <!-- Article Name -->
                <ColumnDefinition Width="140"/>
                <!-- Fournisseur -->
                <ColumnDefinition Width="120"/>
                <!-- Famille -->
                <ColumnDefinition Width="120"/>
                <!-- Prix Achat -->
                <ColumnDefinition Width="120"/>
                <!-- Prix Vente -->
                <ColumnDefinition Width="100"/>
                <!-- Prix MP -->
                <ColumnDefinition Width="80"/>
                <!-- Stock -->
                <ColumnDefinition Width="140"/>
                <!-- Actions -->
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" x:Name="ArticleID"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#374151"/>

            <TextBlock Grid.Column="1" x:Name="Code"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#374151" 
                       FontFamily="Consolas, Monaco, monospace"/>

            <TextBlock Grid.Column="2" x:Name="ArticleName" 
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#1F2937" FontWeight="Medium"
                       TextTrimming="CharacterEllipsis"/>

            <TextBlock Grid.Column="3" x:Name="Fournisseur"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#1F2937" FontWeight="Medium"
                       TextTrimming="CharacterEllipsis"/>

            <TextBlock Grid.Column="4" x:Name="Famillee"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#374151"/>

            <TextBlock Grid.Column="5" x:Name="PrixAchat" Margin="0,0,50,0"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#059669" FontWeight="Medium"
                       HorizontalAlignment="Right"/>

            <TextBlock Grid.Column="6" x:Name="PrixVente" Margin="0,0,50,0"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#DC2626" FontWeight="Medium"
                       HorizontalAlignment="Right"/>

            <TextBlock Grid.Column="7" x:Name="PrixMP" Margin="0,0,50,0"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#7C3AED" FontWeight="Medium"
                       HorizontalAlignment="Right"/>

            <TextBlock Grid.Column="8" x:Name="Quantite" Margin="0,0,50,0"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#374151"
                       HorizontalAlignment="Right"/>

            <StackPanel Grid.Column="9" Orientation="Horizontal" HorizontalAlignment="Center" Width="140">
                <Button Content="Edit" Background="#4A90E2" Style="{StaticResource ActionButtonStyle}" 
                        Click="EditButton_Click" Width="65"/>
                <Button Content="Delete" Background="#E74C3C" Style="{StaticResource ActionButtonStyle}" 
                        Click="DeleteButton_Click" Width="65"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>