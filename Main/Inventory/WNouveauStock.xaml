<Window x:Class="Superete.Main.Inventory.WNouveauStock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion Stock" 
        Height="242" Width="420"
        Background="Transparent"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F7FAFC"/>
                                <Setter Property="BorderBrush" Value="#3182CE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#EDF2F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F7FAFC"/>
                                <Setter Property="Foreground" Value="#E53E3E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="16" 
            BorderThickness="1" 
            BorderBrush="#E2E8F0" Margin="0,0,0,10">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="270" 
                            ShadowDepth="8" 
                            BlurRadius="25" 
                            Opacity="0.15"/>
        </Border.Effect>

        <Grid Margin="0,0,0,33">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Close Button -->
            <Grid Grid.Row="0" Margin="20,15,15,0">
                <TextBlock Text="Ajout de Stock"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Foreground="#1A202C"
                          VerticalAlignment="Center"/>

                <Button Name="CloseButton"
                        Style="{StaticResource CloseButton}"
                        Content="×"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Content Area -->
            <StackPanel Grid.Row="1" 
                       Margin="30,20,30,-13">

                <!-- Add New Article Stock Button -->
                <Button Name="AddNewArticleButton"
                        Style="{StaticResource ModernButton}"
                        Click="AddNewArticleButton_Click">
                    <TextBlock Text="Ajouter Stock d'un nouveau Article ou Article existant avec nouveau fournisseur"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              LineHeight="18"/>
                </Button>

                <!-- Add Existing Article Stock Button -->
                <Button Name="AddExistingArticleButton"
                        Style="{StaticResource ModernButton}"
                        Click="AddExistingArticleButton_Click">
                    <TextBlock Text="Ajouter Stock d'un Article Existant"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              LineHeight="18"/>
                </Button>


            </StackPanel>
        </Grid>
    </Border>
</Window>