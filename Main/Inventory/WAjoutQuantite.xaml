<Window x:Class="Superete.Main.Inventory.WAjoutQuantite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superete.Main.Inventory"
        mc:Ignorable="d"
        Title="Ajouter un Fournisseur" Height="310" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA" WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Blue Button Style -->
        <Style x:Key="BlueButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Green Button Style -->
        <Style x:Key="GreenButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Red Button Style -->
        <Style x:Key="RedButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#10B981"/>
                                <Setter Property="Background" Value="#FAFBFC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#374151"/>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBorder"
                                    Width="18" Height="18"
                                    Background="White"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    VerticalAlignment="Center">
                                <Path x:Name="CheckPath"
                                      Data="M 2 5 L 6 9 L 14 1"
                                      Stroke="#10B981"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Margin="8,0,0,0"
                                            VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckPath" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBorder" Property="Background" Value="#F0FDF4"/>
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#10B981"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#10B981"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <Border Background="White" CornerRadius="10" Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="315"
                              ShadowDepth="3" BlurRadius="15" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="217*"/>
                <RowDefinition Height="66*"/>
                <RowDefinition Height="23*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#10B981" CornerRadius="8,8,0,0" Height="50" VerticalAlignment="Top">
                <Grid>
                    <TextBlock Text="Ajouter Quantite"
                              FontSize="16" FontWeight="SemiBold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" Name="Header"/>

                    <!-- Close Button -->
                    <Button Name="CloseButton"
                            Style="{StaticResource CloseButton}"
                            Content="×"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Margin="30,70,30,0" Grid.RowSpan="2">
                <!-- Supplier Name -->
                <TextBlock Text="Quantite *"
                          Style="{StaticResource ModernLabel}"
                          Margin="0,0,0,6"/>
                <TextBox 
                        Style="{StaticResource ModernTextBox}" Name="Quantite"
                        Margin="0,0,0,18"
                        PreviewTextInput="Quantite_PreviewTextInput"
                        DataObject.Pasting="Quantite_Pasting" />
                <CheckBox Content="Ticket"
                         x:Name="TicketCheckBox" IsChecked="True"
                         Style="{StaticResource ModernCheckBox}"/>

                <!-- Metod Label -->
                <TextBlock Text="Metod"
                          Style="{StaticResource ModernLabel}"
                          Margin="0,10,0,6"/>

                <!-- Checkbox -->

                <!-- Payment Method Buttons -->
                <Grid Grid.Row="3" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cash Button -->
                    <Button x:Name="CashButton" 
Grid.Column="0" 
Style="{StaticResource BlueButtonStyle}" 
Height="45" Click="CashButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="M3 6h18v12H3V6zm2 2v8h14V8H5z" 
      Fill="White" 
      Stretch="Uniform" 
      Width="16" Height="16" 
      Margin="0,0,6,0"/>
                            <TextBlock Text="CASH" 
           FontSize="11" 
           VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Half Cash / Half Credit Button -->
                    <Button x:Name="HalfButton" 
Grid.Column="1" 
Style="{StaticResource RedButtonStyle}" 
Height="45" Click="HalfButton_Click" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="5,0,0,0" Width="114">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="M4 4h16v16H4V4zm8 0v16" 
      Fill="White" 
      Stroke="White"
      StrokeThickness="2"
      Stretch="Uniform" 
      Width="16" Height="16" 
      Margin="0,0,6,0"/>
                            <TextBlock Text="50/50" 
           FontSize="11" 
           VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Credit Button -->
                    <Button x:Name="CreditButton" 
Grid.Column="4" 
Style="{StaticResource GreenButtonStyle}" 
Height="45" Click="CreditButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="M2 6c0-1.1.9-2 2-2h16a2 2 0 0 1 2 2v2H2V6zm0 4h20v8c0 1.1-.9 2-2 2H4a2 2 0 0 1-2-2v-8z" 
      Fill="White" 
      Stretch="Uniform" 
      Width="16" Height="16" 
      Margin="0,0,6,0"/>
                            <TextBlock Text="CREDIT" 
           FontSize="11" 
           VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>