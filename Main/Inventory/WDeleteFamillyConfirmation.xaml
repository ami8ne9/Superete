<Window x:Class="Superete.Main.Inventory.WDeleteFamillyConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation de suppression" Height="200" Width="400" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>
        <!-- Delete Button Style -->
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="Background" Value="#DC2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#991B1B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <Border x:Name="border" Background="White" CornerRadius="10" Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="320"
                          ShadowDepth="6" BlurRadius="20" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="0,0,0,-7">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#DC2626" CornerRadius="10,10,0,0" Padding="20,15" Margin="0,-5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Warning Icon -->
                    <Ellipse Grid.Column="0" Width="24" Height="24" Fill="White" Margin="0,0,10,0">
                        <Ellipse.OpacityMask>
                            <VisualBrush>
                                <VisualBrush.Visual>
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" 
                                              Stroke="Black"/>
                                    </Canvas>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Ellipse.OpacityMask>
                    </Ellipse>

                    <TextBlock Grid.Column="1" Text="Confirmation de suppression" 
                              FontSize="16" FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>

                    <!-- Close Button -->
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="30,25,30,25">
                <TextBlock Text="Êtes-vous sûr de vouloir supprimer cet article ?" 
                          FontSize="14" 
                          Foreground="#374151"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10" Height="22"/>

                <TextBlock Text="Cette action est irréversible." 
                          FontSize="12" 
                          Foreground="#6B7280"
                          FontStyle="Italic"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Buttons -->
            <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="0,0,10,10" Padding="20,15">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="Annuler" 
                           Style="{StaticResource CancelButton}"
                           Click="CancelButton_Click"
                           Margin="0,0,15,0"
                           Width="90"/>

                    <Button Content="Supprimer" 
                           Style="{StaticResource DeleteButton}"
                           Click="DeleteButton_Click"
                           Width="100"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
