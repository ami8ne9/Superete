<Window x:Class="Superete.Main.Inventory.WConfirmTransaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation de transaction" Height="450" Width="500" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>
        <!-- Confirm Button Style -->
        <Style x:Key="ConfirmButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <!-- Total Style -->
        <Style x:Key="TotalStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#059669"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <Border x:Name="border" Background="White" CornerRadius="10" Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="320"
                          ShadowDepth="6" BlurRadius="20" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="0,0,0,-7">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#10B981" CornerRadius="10,10,0,0" Padding="20,15" Margin="0,-5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Check Icon -->
                    <Ellipse Grid.Column="0" Width="24" Height="24" Fill="White" Margin="0,0,10,0">
                        <Ellipse.OpacityMask>
                            <VisualBrush>
                                <VisualBrush.Visual>
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" 
                                              Stroke="Black" StrokeThickness="2"/>
                                    </Canvas>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Ellipse.OpacityMask>
                    </Ellipse>

                    <TextBlock Grid.Column="1" Text="Confirmation de transaction" 
                              FontSize="16" FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="30,25,30,5" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Transaction Summary -->
                    <TextBlock Text="Résumé de la transaction" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="#1F2937"
                              Margin="0,0,0,15"/>

                    <!-- Transaction Details -->
                    <Border Background="#F8FAFC" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Number of Items -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre d'articles:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="NbrArticle" Text="0" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>

                            <!-- Subtotal -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Sous-total:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="Subtotal" Text="0.00 DH" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>

                            <!-- Tax --><!--
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="TVA (20%):" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="Tax" Text="€0.00" Style="{StaticResource ValueStyle}" Margin="0,0,0,8"/>-->

                            <!-- Discount -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Remise:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="Remise" Text="-0.00 DH" Style="{StaticResource ValueStyle}" Margin="0,0,0,16" Foreground="#DC2626"/>

                            <!-- Separator -->
                            <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#D1D5DB" Height="1" Margin="0,0,0,16"/>

                            <!-- Total -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="TOTAL:" FontSize="18" FontWeight="Bold" Foreground="#1F2937"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="FinalTotal" Text="0.00 DH" Style="{StaticResource TotalStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Remise and Credit -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*" Name="CreditColumn"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Remise" FontSize="14" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,0,0,8"/>
                            <TextBox x:Name="RemiseInput" Height="35" Padding="10,8" FontSize="13" 
                                    Background="White" BorderBrush="#D1D5DB" BorderThickness="1"
                                    Text="0" TextChanged="RemiseInput_TextChanged" PreviewTextInput="DecimalTextBox_PreviewTextInput"
DataObject.Pasting="DecimalTextBox_Pasting"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Name="CreditStack">
                            <TextBlock Text="Credit" FontSize="14" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,0,0,8"/>
                            <TextBox x:Name="CreditInput" Height="35" Padding="10,8" FontSize="13" 
                                    Background="White" BorderBrush="#D1D5DB" BorderThickness="1" PreviewTextInput="DecimalTextBox_PreviewTextInput"
DataObject.Pasting="DecimalTextBox_Pasting"
                                    Text="0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Customer Info -->
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="0,0,10,10" Padding="20,15" Margin="0,328,0,5">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="Annuler" 
                           Style="{StaticResource CancelButton}"
                           Click="CancelButton_Click"
                           Margin="0,0,15,0"
                           Width="90"/>

                    <Button Content="Confirmer" 
                           Style="{StaticResource ConfirmButton}"
                           Click="ConfirmButton_Click"
                           Width="120"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>