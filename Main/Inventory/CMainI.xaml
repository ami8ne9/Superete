<UserControl x:Class="Superete.Main.Inventory.CMainI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Superete.Main.Inventory"
>

    <UserControl.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#6366F1"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#06B6D4"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>

        <!-- Modern Drop Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="2" Color="#000000" Opacity="0.08"/>
        <DropShadowEffect x:Key="ButtonShadow" BlurRadius="8" ShadowDepth="1" Color="#000000" Opacity="0.12"/>

        <!-- Header Text Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <!-- Increased from 12 to 20 -->
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="MinHeight" Value="120"/>
            <!-- Ensures minimum height -->
            <Setter Property="Height" Value="120"/>
            <!-- Explicit height for all cards -->
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Stat Value Style -->
        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Stat Label Style -->
        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.95"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource ButtonShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5048E5"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="2" Color="#000000" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4338CA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Background" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ContentPresenter x:Name="ContentPresenter"
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="Center"/>
                                <Path x:Name="DropDownGlyph"
                                      Data="M7 10L12 15L17 10"
                                      Stroke="{StaticResource TextSecondaryBrush}"
                                      StrokeThickness="2"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBoxBorder"
                                    Width="18" Height="18"
                                    Background="Transparent"
                                    BorderBrush="White"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Margin="0,0,8,0">
                                <Path x:Name="CheckMark"
                                      Data="M3 8L7 12L15 4"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="White"/>
                                <Setter TargetName="CheckMark" Property="Stroke" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFFFFF20"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="224"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="0,0,20,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Color="#000000" Opacity="0.1"/>
            </Border.Effect>
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Back Button -->
                    <!-- Back Button -->
                    <Button x:Name="BackButton"
                            Width="40" Height="40"
                            Style="{StaticResource IconButtonStyle}"
                            Click="BackButton_Click" >
                        <Path Data="M15 19L8 12L15 5" Stroke="White" StrokeThickness="2" Fill="Transparent" Width="18" Height="18"/>
                    </Button>
                    <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,0,12,0"/>
                    <TextBlock Text="INVENTORY MANAGEMENT" Style="{StaticResource HeaderTextStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="40,0">

                    <Border Background="White" CornerRadius="8" Margin="0,0,12,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="1" Color="#000000" Opacity="0.08"/>
                        </Border.Effect>
                        <TextBox x:Name="SearchTextBox" MaxLength="100"
                                 Width="280" Height="44"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Padding="16,12"
                                 FontSize="14"
                                 FontFamily="Segoe UI"
                                 Tag="Rechercher un article..."
                                 TextChanged="SearchTextBox_TextChanged"/>
                    </Border>

                    <Button Style="{StaticResource IconButtonStyle}"
                            Background="#FFFFFF20"
                            Click="SearchButton_Click">
                        <Path Data="M21 21L16.514 16.506M19 10.5C19 15.194 15.194 19 10.5 19S2 15.194 2 10.5S5.806 2 10.5 2S19 5.806 19 10.5Z"
                              Stroke="White"
                              StrokeThickness="2"
                              Fill="{x:Null}"
                              Width="20" Height="20"/>
                    </Button>
                    <CheckBox Content="Avec Code" Name="WithCodeCheckBox"
         Style="{StaticResource ModernCheckBoxStyle}"
         Margin="20,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Data Grid Section -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"  Grid.Row="1">
            <Grid Margin="20,20,20,0">
                <Border Background="White" CornerRadius="16" Effect="{StaticResource CardShadow}">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Modern Column Header -->
                        <Border Grid.Row="0"
        Background="#F8FAFC"
        CornerRadius="16,16,0,0"
        BorderBrush="{StaticResource BorderBrush}"
        BorderThickness="0,0,0,1">
                            <Grid Margin="24,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <!-- ID -->
                                    <ColumnDefinition Width="120"/>
                                    <!-- CODE -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- ARTICLE -->
                                    <ColumnDefinition Width="140"/>
                                    <!-- FOURNISSEUR -->
                                    <ColumnDefinition Width="120"/>
                                    <!-- FAMILLE -->
                                    <ColumnDefinition Width="120"/>
                                    <!-- PRIX ACHAT -->
                                    <ColumnDefinition Width="120"/>
                                    <!-- PRIX VENTE -->
                                    <ColumnDefinition Width="100"/>
                                    <!-- PRIX MO -->
                                    <ColumnDefinition Width="80"/>
                                    <!-- STOCK -->
                                    <ColumnDefinition Width="140"/>
                                    <!-- ACTIONS -->
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ID" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="1" Text="CODE" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="2" Text="ARTICLE" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="3" Text="FOURNISSEUR" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="4" Text="FAMILLE" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="5" Text="PRIX ACHAT" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="6" Text="PRIX VENTE" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="7" Text="PRIX MO" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="8" Text="STOCK" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                                <TextBlock Grid.Column="9" Text="ACTIONS" VerticalAlignment="Center"
                  FontWeight="SemiBold" FontSize="13"
                  Foreground="{StaticResource TextPrimaryBrush}" FontFamily="Segoe UI"/>
                            </Grid>
                        </Border>

                        <!-- Data Grid Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  Style="{DynamicResource {x:Static GridView.GridViewScrollViewerStyleKey}}" Margin="0,0,0,10">
                            <StackPanel x:Name="ArticlesContainer" >

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
        <!-- Modern Statistics Panel -->
        <Grid Grid.Row="2" Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Articles Count Card -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}" Height="NaN" CornerRadius="20" Margin="8,32,8,32">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#EF4444" Offset="0"/>
                        <GradientStop Color="#DC2626" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Margin="0,-10,0,-17">
                    <TextBlock Name="ArticlesTotal" Style="{StaticResource StatValueStyle}" Height="38" Width="Auto"/>
                    <TextBlock Text="ARTICLES" Style="{StaticResource StatLabelStyle}" Margin="0,4,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Name="QuantiteTotal"
                                      Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Quantite Total"
                                      Foreground="White" FontSize="10" Opacity="0.9"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Promotions Card -->

            <!-- Stock Value (Prix A) Card -->
            <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}" Margin="6,32,10,32">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#2563EB" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Name="PrixATotal" Style="{StaticResource StatValueStyle}"/>
                    <TextBlock Text="VALEUR STOCK (Prix A)" Style="{StaticResource StatLabelStyle}" Margin="0,4,0,8"/>
                </StackPanel>
            </Border>

            <!-- Stock Value (Prix MP) Card -->
            <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Name="PrixMPTotal" Style="{StaticResource StatValueStyle}"/>
                    <TextBlock Text="VALEUR STOCK (Prix MP)" Style="{StaticResource StatLabelStyle}" Margin="0,4,0,8"/>
                </StackPanel>
            </Border>

            <!-- Stock Value (Prix V) Card -->
            <Border Grid.Column="3" Style="{StaticResource ModernCardStyle}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#8B5CF6" Offset="0"/>
                        <GradientStop Color="#7C3AED" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Name="PrixVTotal" Style="{StaticResource StatValueStyle}"/>
                    <TextBlock Text="VALEUR STOCK (Prix V)" Style="{StaticResource StatLabelStyle}" Margin="0,4,0,8"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons Panel -->
            <StackPanel Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Width="221" Height="220">
                <Button Name="NewArticleButton"
                       Width="173" Height="48"
                       Style="{StaticResource ModernButtonStyle}"
                       Background="{StaticResource SuccessBrush}"
                       Margin="0,0,0,12"
                       Click="NewArticleButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12 5V19M5 12H19"
                              Stroke="White"
                              StrokeThickness="2"
                              Width="19" Height="16"
                              Margin="0,0,8,0" Stretch="Fill"/>
                        <TextBlock Text="Nouveau Stock" FontWeight="Medium" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button x:Name="AddMultipleArticlesButton"
        Width="173" Height="44" Margin="0,0,0,10"
        Background="#8B5CF6"
        BorderThickness="0"
        Cursor="Hand"
        Click="AddMultipleArticlesButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="16,0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#7C3AED"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#6D28D9"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5"/>
                                                <Setter Property="Background" Value="#E5E7EB"/>
                                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                                <Setter Property="Cursor" Value="No"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="20" Height="20" Margin="0,0,10,0">
                            <Path Data="M16 6v12M12 9v6M8 11v2" 
                  Stroke="White" 
                  StrokeThickness="2"
                  Opacity="0.8"/>
                        </Grid>
                        <TextBlock Text="Nouveau Stoks" 
                   FontWeight="SemiBold" 
                   FontSize="14"
                   Foreground="White"/>
                    </StackPanel>
                </Button>
                <Button Width="173" Height="44" Name="FournisseurManage"
                       Background="{StaticResource TextSecondaryBrush}"
                       Style="{StaticResource ModernButtonStyle}"
                       Margin="0,0,0,12"
                       FontSize="12" Click="Button_Click">
                    <StackPanel Orientation="Horizontal" Height="18" Width="131">
                        <Path Data="M3 7V5C3 3.89543 3.89543 3 5 3H9L11 5H19C20.1046 5 21 5.89543 21 7V19C21 20.1046 20.1046 21 19 21H5C3.89543 21 3 20.1046 3 19V7Z"
                              Fill="White" Width="14" Height="14" Margin="0,0,6,0"/>
                        <TextBlock Text="FORNISSEURE MANAGEMENT"  Height="22" Width="110" FontSize="10"/>
                    </StackPanel>
                </Button>
                <Button Width="173" Height="44" Name="ManageFamillies"
                       Background="{StaticResource TextSecondaryBrush}"
                       Style="{StaticResource ModernButtonStyle}"
                       FontSize="12" Click="Button_Click_1">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12 8V4M8 8V4M16 8V4M6 10V20C6 21.1046 6.89543 22 8 22H16C17.1046 22 18 21.1046 18 20V10M6 10H18M6 10L4 8H20L18 10"
                              Stroke="White"
                              StrokeThickness="2"
                              Fill="{x:Null}"
                              Width="14" Height="14"
                              Margin="0,0,6,0"/>
                        <TextBlock Text="Manage Famillies" Height="15"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
