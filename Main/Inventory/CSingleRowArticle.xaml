<UserControl x:Class="Superete.Main.Inventory.CSingleRowArticle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40">
    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="White" Margin="0,0,0,-15" CornerRadius="4" Padding="10">
        <Grid MouseLeftButtonDown="MyGrid_MouseLeftButtonDown" Name="MainContainer">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- Article Name -->
                <ColumnDefinition Width="2*"/>
                <!-- Fournisseur -->
                <ColumnDefinition Width="1*"/>
                <!-- Quantity -->
                <ColumnDefinition Width="Auto" Name="ButtonsContainer"/>
                <!-- Actions -->
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" x:Name="ArticleName"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#1F2937" FontWeight="Medium"
                       TextTrimming="CharacterEllipsis"/>

            <TextBlock Grid.Column="1" x:Name="Fournisseur"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#6B7280"
                       TextTrimming="CharacterEllipsis"
                       Margin="10,0,0,0"/>

            <TextBlock Grid.Column="2" x:Name="Quantite"
                       VerticalAlignment="Center" Height="15"
                       FontSize="12" Foreground="#374151"
                       HorizontalAlignment="Right"
                       Margin="10,0,30,0"/>

            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" Width="140" Name="ButtonsContainerPanel">
                <Button Content="Delete" Background="#E74C3C" Style="{StaticResource ActionButtonStyle}" 
                        Click="DeleteButton_Click" Width="65" Name="DeleteButton"/>
                <Button Content="Add Stock" Background="#10B981" Style="{StaticResource ActionButtonStyle}" 
                        Click="EditButton_Click" Width="65" Name="EditButton"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>