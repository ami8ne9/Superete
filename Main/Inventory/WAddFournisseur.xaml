<Window x:Class="Superete.Main.Inventory.WAddFournisseur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superete.Main.Inventory"
        mc:Ignorable="d"
        Title="Ajouter un Fournisseur" Height="390" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA" WindowStyle="None">

	<Window.Resources>
		<!-- Modern Button Style -->
		<Style x:Key="ModernButton" TargetType="Button">
			<Setter Property="Background" Value="#007ACC"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="15,8"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#005A9E"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#004578"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Modern TextBox Style -->
		<Style x:Key="ModernTextBox" TargetType="TextBox">
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderBrush" Value="#D1D5DB"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Padding" Value="10,8"/>
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
							<ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsFocused" Value="True">
								<Setter Property="BorderBrush" Value="#007ACC"/>
								<Setter Property="Background" Value="#FAFBFC"/>
							</Trigger>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="BorderBrush" Value="#9CA3AF"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Label Style -->
		<Style x:Key="ModernLabel" TargetType="TextBlock">
			<Setter Property="FontWeight" Value="Medium"/>
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="Foreground" Value="#374151"/>
		</Style>
	</Window.Resources>
	<Window.Effect>
		<DropShadowEffect/>
	</Window.Effect>

	<Border Background="White" CornerRadius="10" Margin="5">
		<Border.Effect>
			<DropShadowEffect Color="Black" Direction="315"
                              ShadowDepth="3" BlurRadius="15" Opacity="0.3"/>
		</Border.Effect>

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="264*"/>
				<RowDefinition Height="98*"/>
				<RowDefinition Height="29*"/>
			</Grid.RowDefinitions>
			<!-- Header -->
			<Border Background="#007ACC" CornerRadius="8,8,0,0" Height="50" VerticalAlignment="Top">
				<TextBlock Text="Ajouter un Fournisseur"
                          FontSize="16" FontWeight="SemiBold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
			</Border>

			<!-- Content -->
			<StackPanel Margin="30,70,30,2" Grid.RowSpan="2">
				<!-- Supplier Name -->
				<TextBlock Text="Nom du fournisseur *"
                          Style="{StaticResource ModernLabel}"
                          Margin="0,0,0,6"/>
				<TextBox Name="NameTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,18"/>

				<!-- Phone Number -->
				<TextBlock Text="Numéro de téléphone"
                          Style="{StaticResource ModernLabel}"
                          Margin="0,0,0,6"/>
				<TextBox Name="PhoneTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,18"
                        PreviewTextInput="Quantite_PreviewTextInput"
                        DataObject.Pasting="Quantite_Pasting"/>

				<!-- Error Message -->
				<TextBlock Name="ErrorTextBlock"
                          Foreground="#DC2626"
                          FontSize="12"
                          FontWeight="Medium"
                          Margin="0,0,0,20"
                          TextWrapping="Wrap"/>

				<!-- Buttons -->
				<StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right">
					<Button Content="Annuler"
                           Style="{StaticResource ModernButton}"
                           Background="#6B7280"
                           Margin="0,0,10,0"
                           Width="80"
                           Click="CancelButton_Click"/>
					<Button Content="Ajouter"
                           Style="{StaticResource ModernButton}"
                           Click="AddButton_Click"
                           Width="80"/>
				</StackPanel>
			</StackPanel>
		</Grid>
	</Border>
</Window>

