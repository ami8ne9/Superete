<UserControl x:Class="GestionComerce.Main.ClientPage.SingleRowClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="PaidButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="80"/>
        </Style>

        <!-- Data Style -->
        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#343A40"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Badge Style for Company -->
        <Style x:Key="CompanyBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <Border Background="White" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1" 
            Padding="20,10" MinHeight="50">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Client ID -->
            <TextBlock Grid.Column="0" x:Name="IdText" 
                      Style="{StaticResource DataTextStyle}"/>

            <!-- Client Name with Company Badge -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock x:Name="NameText" 
                          Style="{StaticResource DataTextStyle}"/>
                <Border x:Name="CompanyBadge" 
                        Style="{StaticResource CompanyBadgeStyle}"
                        Visibility="Collapsed">
                    <TextBlock Text="Company" FontSize="10" FontWeight="Bold" 
                              Foreground="White"/>
                </Border>
            </StackPanel>

            <!-- Phone Number / ICE -->
            <TextBlock Grid.Column="2" x:Name="PhoneText" 
                      Style="{StaticResource DataTextStyle}"/>

            <!-- Address / Headquarters -->
            <TextBlock Grid.Column="3" x:Name="AddressText" 
                      Style="{StaticResource DataTextStyle}"
                      TextTrimming="CharacterEllipsis"/>

            <!-- Balance -->
            <TextBlock Grid.Column="4" x:Name="BalanceText" 
                      Style="{StaticResource DataTextStyle}"/>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Right"
                       Margin="0,0,20,0">
                <Button Content="Edit" Style="{StaticResource EditButtonStyle}" Name="Update"
                       Click="Update_Click"/>
                <Button Content="Delete" Style="{StaticResource DeleteButtonStyle}" Name="Delete"
                       Click="Delete_Click"/>
                <Button Content="Pay" Style="{StaticResource PaidButtonStyle}" Name="Paye"
                       Click="Paid_Click"/>
                <Button Content="Operations" Style="{StaticResource OperationButtonStyle}" Name="Operation"
                       Click="Operations_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>