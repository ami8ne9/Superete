<UserControl x:Class="Superete.Main.ClientPage.CSingleClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60" Margin="0,0,0,1">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UpdateButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="PaidButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="80"/>
        </Style>

        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#343A40"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <Border Background="White" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1">
        <Border x:Name="HoverBorder" Background="White">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <!-- ID -->
                    <ColumnDefinition Width="200"/>
                    <!-- Client NAME -->
                    <ColumnDefinition Width="150"/>
                    <!-- PHONE NUMBER -->
                    <!-- STATUS -->
                    <ColumnDefinition Width="*"/>
                    <!-- ACTIONS -->
                </Grid.ColumnDefinitions>

                <!-- Client ID -->
                <TextBlock Grid.Column="0" x:Name="ClientID" Style="{StaticResource DataTextStyle}" />

                <!-- Client Name -->
                <TextBlock Grid.Column="1" x:Name="Nom" Text="{Binding Name}" Style="{StaticResource DataTextStyle}" />

                <!-- Phone Number -->
                <TextBlock Grid.Column="2" x:Name="Telephone" Text="{Binding PhoneNumber}" Style="{StaticResource DataTextStyle}" />

                

                <!-- Action Buttons -->
                <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource UpdateButtonStyle}" Content="Update" Click="Update_Click"/>
                    <Button Style="{StaticResource DeleteButtonStyle}" Content="Delete" Click="Delete_Click"/>
                    <Button Style="{StaticResource PaidButtonStyle}" Content="Pay" Click="Paid_Click"/>
                    <Button Style="{StaticResource OperationButtonStyle}" Content="Operations" Click="Operations_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>


