<Window x:Class="Superete.Main.ClientPage.PaidClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Management" Height="550" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Effect>
        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="10" Opacity="0.3" BlurRadius="15"/>
    </Window.Effect>

    <Border Background="White" CornerRadius="15" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <StackPanel>
                    <TextBlock Text="Payment Management" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#2E3440"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="ClientNameLabel" 
                              Text="ABC Electronics"
                              FontSize="16" 
                              Foreground="#6B7280"/>
                </StackPanel>
                <Button x:Name="CloseButton" 
                       Content="✕" 
                       Width="30" 
                       Height="30"
                       HorizontalAlignment="Right"
                       Background="Transparent"
                       BorderThickness="0"
                       FontSize="16"
                       Foreground="#8B5A5A"
                       Cursor="Hand"
                       Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE5E5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Balance Overview Cards -->
                <Grid Grid.Row="0" Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Credit Card -->
                    <Border Grid.Column="0" 
                           Background="#EBF8FF" 
                           BorderBrush="#3B82F6" 
                           BorderThickness="2" 
                           CornerRadius="12" 
                           Padding="20">
                        <StackPanel>
                            <TextBlock Text="Total Credit" 
                                      FontSize="14" 
                                      FontWeight="SemiBold" 
                                      Foreground="#1E40AF" 
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="TotalCreditLabel" 
                                      Text="2500.00 DH" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#1E40AF"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Paid Card -->
                    <Border Grid.Column="2" 
                           Background="#F0FDF4" 
                           BorderBrush="#10B981" 
                           BorderThickness="2" 
                           CornerRadius="12" 
                           Padding="20">
                        <StackPanel>
                            <TextBlock Text="Total Paid" 
                                      FontSize="14" 
                                      FontWeight="SemiBold" 
                                      Foreground="#059669" 
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="TotalPaidLabel" 
                                      Text="1250.00 DH" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#059669"/>
                        </StackPanel>
                    </Border>

                    <!-- Remaining Balance Card -->
                    <Border Grid.Column="4" 
                           Background="#FEF3C7" 
                           BorderBrush="#F59E0B" 
                           BorderThickness="2" 
                           CornerRadius="12" 
                           Padding="20">
                        <StackPanel>
                            <TextBlock Text="Remaining Balance" 
                                      FontSize="14" 
                                      FontWeight="SemiBold" 
                                      Foreground="#D97706" 
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="DifferenceLabel" 
                                      Text="1250.00 DH" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#D97706"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Payment Input Section -->
                <Border Grid.Row="1" 
                       Background="#F9FAFB" 
                       BorderBrush="#E5E7EB" 
                       BorderThickness="1" 
                       CornerRadius="12" 
                       Padding="25" 
                       Margin="0,0,0,25">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="Make Payment" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#2E3440" 
                                  Margin="0,0,0,15"/>

                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="Payment Amount:" 
                                      FontWeight="SemiBold" 
                                      FontSize="14" 
                                      Foreground="#2E3440" 
                                      Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="PaymentAmountTextBox" MaxLength="18"
                                        Grid.Column="0"
                                        Height="45"
                                        Padding="15,10"
                                        FontSize="14"
                                        BorderThickness="2"
                                        BorderBrush="#E5E7EB"
                                        Background="White"
                                        Margin="0,0,10,0"/>

                                <TextBlock Grid.Column="1" 
                                          Text="DH" 
                                          FontSize="14" 
                                          FontWeight="SemiBold" 
                                          Foreground="#6B7280" 
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="PayMaxButton" 
                                   Content="Pay Maximum" 
                                   Height="35"
                                   Padding="15,0"
                                   Background="#F3F4F6"
                                   BorderThickness="0"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"
                                   Cursor="Hand"
                                   Margin="0,0,10,0"
                                   Click="PayMaxButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Remaining Balance Display -->
                <Border Grid.Row="2" 
                       Background="#FEF7FF" 
                       BorderBrush="#A855F7" 
                       BorderThickness="2" 
                       CornerRadius="12" 
                       Padding="20">
                    <StackPanel>
                        <TextBlock Text="Remaining Balance After Payment" 
                                  FontSize="14" 
                                  FontWeight="SemiBold" 
                                  Foreground="#7C3AED" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="RemainingBalanceLabel" 
                                  Text="1250.00 DH" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#7C3AED"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button x:Name="CancelButton" 
                       Content="Cancel" 
                       Width="100" 
                       Height="40"
                       Margin="0,0,15,0"
                       Background="#F3F4F6"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       Cursor="Hand"
                       Click="CancelButton_Click"/>

                <Button x:Name="ProcessPaymentButton" 
                       Content="Process Payment" 
                       Width="140" 
                       Height="40"
                       Background="#10B981"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Cursor="Hand"
                       Click="ProcessPaymentButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>