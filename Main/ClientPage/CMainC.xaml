<UserControl x:Class="GestionComerce.Main.ClientPage.CMainC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GestionComerce"
       
        Background="#FAFBFC"
        >

    <UserControl.Resources>
        <!-- Modern Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#EF4444" Offset="0"/>
                        <GradientStop Color="#DC2626" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="PaidButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F59E0B" Offset="0"/>
                        <GradientStop Color="#D97706" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="80"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Data Style -->
        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Card Style for Statistics -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1F29371A" Direction="270" ShadowDepth="4" BlurRadius="20" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="20,10" CornerRadius="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#6366F1" Offset="0"/>
                    <GradientStop Color="#8B5CF6" Offset="0.5"/>
                    <GradientStop Color="#06B6D4" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Content="←" FontSize="24" 
                        Background="Transparent" BorderBrush="White" BorderThickness="1"
                        Foreground="White" Width="40" Height="40"
                        HorizontalAlignment="Center" VerticalAlignment="Top" Cursor="Hand" Margin="0,10,0,0" Click="BackButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Title -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="CLIENT MANAGEMENT" 
                              FontSize="22" FontWeight="Bold" Foreground="White"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Manage your client relationships efficiently" 
                              FontSize="12" Foreground="White" Opacity="0.8"
                              HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Search and Filter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="White" CornerRadius="12" Height="35" Width="200" Margin="0,0,10,0">
                        <Grid>
                            <TextBox Name="SearchTextBox" Background="Transparent" BorderThickness="0"
                                    Padding="12,8" FontSize="14" VerticalAlignment="Center"
                                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                    Foreground="#6B7280" TextChanged="SearchTextBox_TextChanged"/>
                        </Grid>
                    </Border>
                    <Button Content="🔍" Width="35" Height="35" BorderThickness="0" 
                            FontSize="16" Cursor="Hand">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F59E0B" Offset="0"/>
                                <GradientStop Color="#D97706" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Total Clients Card -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#EF4444" Offset="0"/>
                        <GradientStop Color="#DC2626" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Margin="0,-4,0,-13">
                    <TextBlock Text="👥" FontSize="24" Foreground="White" Opacity="0.8" Margin="0,0,0,8" Height="30"/>
                    <TextBlock Text="Clients" FontSize="14" FontWeight="Medium" Foreground="White" 
          Opacity="0.9" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    <TextBlock x:Name="TotalClientText" Text="0" FontSize="36" FontWeight="Bold" Foreground="White" Height="36"/>
                    <TextBlock Text="CLIENT" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="Active Client" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Total Credit Card -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3B82F6" Offset="0"/>
                        <GradientStop Color="#1D4ED8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Margin="0,-10,0,0">
                    <TextBlock Text="💳" FontSize="24" Foreground="White" Opacity="0.8" Margin="0,0,0,8"/>
                    <TextBlock Text="Total Credits" FontSize="14" FontWeight="Medium" Foreground="White" />
                    <TextBlock x:Name="TotalCreditText" Text="0.00 DH" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="TOTAL CREDIT" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="Outstanding Balance" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Paid This Month Card -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Height="120" Margin="0,0,20,0" VerticalAlignment="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Margin="0,-10,0,0">
                    <TextBlock Text="✅" FontSize="24" Foreground="White" Opacity="0.8" Margin="0,0,0,8"/>
                    <TextBlock Text="Total paid" FontSize="14" FontWeight="Medium" Foreground="White" />
                    <TextBlock x:Name="PaidThisMonthText" Text="0.00 DH" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="PAID THIS MONTH" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="Total Payments" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Pending Payments Card -->
            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#8B5CF6" Offset="0"/>
                        <GradientStop Color="#7C3AED" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Margin="0,-10,0,0">
                    <TextBlock Text="⏳" FontSize="24" Foreground="White" Opacity="0.8" Margin="0,0,0,8"/>
                    <TextBlock Text="reste credit" FontSize="14" FontWeight="Medium" Foreground="White" />
                    <TextBlock x:Name="PendingText" Text="0.00 DH" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="PENDING" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="Awaiting Payment" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Add New Client Button -->
            <Button Grid.Column="4" Width="150" Height="80" Margin="20,20,10,20" Name="AddBtn"
        BorderThickness="0" Click="AddNewClient_Click" Cursor="Hand" FontSize="22">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0"/>
                        <GradientStop Color="#059669" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border Width="40" Height="40" Background="White" CornerRadius="20" Opacity="0.2" Margin="0,0,0,4"/>
                                <Border Width="40" Height="40" Background="Transparent" CornerRadius="20" Margin="0,-44,0,4">
                                    <TextBlock Text="+" FontSize="32" FontWeight="Bold" Foreground="White" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="New Client" FontSize="14" FontWeight="SemiBold" 
                              Foreground="White" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Background" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- Main Content Area -->
        <Border Grid.Row="2" Background="White" Margin="20,0,20,20" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#1F29371A" Direction="270" ShadowDepth="4" BlurRadius="20" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" Margin="0,10,0,0" 
                        BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="CLIENT NAME" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="PHONE / ICE" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="ADDRESS" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="BALANCE" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="5" Text="ACTIONS" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Right" Margin="0,0,20,0"/>
                    </Grid>
                </Border>

                <!-- Table Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Name="ClientsContainer">
                        <!-- This will be populated programmatically -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Modal Overlay -->
        <Grid Name="ModalOverlay" Grid.RowSpan="3" Background="#1F293780" Visibility="Collapsed">
            <Border Background="White" CornerRadius="16" MaxWidth="600" MaxHeight="500" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Padding="24">
                <Border.Effect>
                    <DropShadowEffect Color="#1F2937" Direction="270" ShadowDepth="8" BlurRadius="30" Opacity="0.25"/>
                </Border.Effect>
                <ContentPresenter Name="ModalContent"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>