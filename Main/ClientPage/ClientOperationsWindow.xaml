<Window x:Class="Superete.Main.ClientPage.ClientOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opérations Client" Height="700" Width="750"
        MinWidth="550"
        WindowStartupLocation="CenterScreen"
        Background="#FAFBFC" WindowStyle="None">

    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1F29371A" BlurRadius="20" ShadowDepth="4" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListView Style -->
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="AlternationCount" Value="2"/>
        </Style>

        <!-- Modern GridViewColumnHeader Style -->
        <Style x:Key="ModernGridViewColumnHeader" TargetType="GridViewColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8FAFC" Offset="0"/>
                        <GradientStop Color="#F1F5F9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ListViewItem Style -->
        <Style x:Key="ModernListViewItem" TargetType="ListViewItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F1F5F9"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Margin="2">
                            <GridViewRowPresenter Content="{TemplateBinding Content}"
                                                Columns="{TemplateBinding GridView.ColumnCollection}"
                                                Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#EEF2FF" Offset="0"/>
                                <GradientStop Color="#E0E7FF" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#E0E7FF" Offset="0"/>
                                <GradientStop Color="#C7D2FE" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>

        <!-- Amount Text Style -->
        <Style x:Key="AmountTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#059669" Offset="0"/>
                        <GradientStop Color="#047857" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Text Style -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#DCFCE7" Offset="0"/>
                        <GradientStop Color="#BBF7D0" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#166534"/>
        </Style>

        <!-- Operation Type Style -->
        <Style x:Key="OperationTypeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#EEF2FF" Offset="0"/>
                        <GradientStop Color="#E0E7FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#6366F120" BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="550"/>
            <ColumnDefinition x:Name="ArticlesColumn" Width="0"/>
        </Grid.ColumnDefinitions>

        <!-- Liste des opérations -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="15,15,15,15">
            <StackPanel>
                <TextBlock Text="📋 Opérations Client" Style="{StaticResource HeaderTextStyle}"/>
                <ListView x:Name="OperationsList" 
                         Style="{StaticResource ModernListView}"
                         SelectionChanged="OperationsList_SelectionChanged"
                         ItemContainerStyle="{StaticResource ModernListViewItem}" Width="591">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource ModernGridViewColumnHeader}">
                            <GridViewColumn Header="Date" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Date, StringFormat='dd/MM/yyyy', FallbackValue='N/A'}" 
                                                 FontSize="13" FontWeight="Medium" Foreground="#64748B"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="ID" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#F1F5F9" CornerRadius="6" Padding="6,3">
                                            <TextBlock Text="{Binding OperationID}" 
                                                     FontWeight="Bold" Foreground="#475569"
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Type" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource OperationTypeStyle}">
                                            <TextBlock Text="{Binding OperationType, FallbackValue=N/A}" 
                                                     FontSize="12" FontWeight="SemiBold"
                                                     Foreground="#4338CA" 
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Montant" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PrixOperation, StringFormat='C2', FallbackValue='0,00 €'}" 
                                                 Style="{StaticResource AmountTextStyle}"
                                                 FontSize="13"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Remise" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FEF2F2" CornerRadius="6" Padding="6,3">
                                            <TextBlock Text="{Binding Remise, StringFormat='C2', FallbackValue='0,00 €'}" 
                                                     FontSize="12" FontWeight="Medium" Foreground="#DC2626"
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Crédit" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFFBEB" CornerRadius="6" Padding="6,3">
                                            <TextBlock Text="{Binding CreditValue, StringFormat='C2', FallbackValue='0,00 €'}" 
                                                     FontSize="12" FontWeight="Medium" Foreground="#D97706"
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                           
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>

        <!-- Liste des Articles -->
        <Border x:Name="ArticlesPanel" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="15,15,15,15">
            <StackPanel>
                <DockPanel Margin="0,0,0,24">
                    <TextBlock Text="📦 Articles de l'opération" Style="{StaticResource HeaderTextStyle}" DockPanel.Dock="Left"/>
                    <Button x:Name="CloseArticlesButton" 
                           DockPanel.Dock="Right"
                           Click="CloseArticlesButton_Click"
                           Background="Transparent"
                           BorderThickness="0"
                           FontSize="18"
                           Foreground="#64748B"
                           Cursor="Hand"
                           Padding="10"
                           ToolTip="Fermer le panneau des articles">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F1F5F9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="✕"/>
                    </Button>
                    <TextBlock x:Name="OperationInfoText" 
                             Text="Sélectionnez une opération" 
                             FontSize="14" Foreground="#64748B" 
                             HorizontalAlignment="Right" VerticalAlignment="Bottom"
                             DockPanel.Dock="Right" Margin="0,0,15,0"/>
                </DockPanel>

                <ListView x:Name="ArticlesList" 
                         Style="{StaticResource ModernListView}"
                         ItemContainerStyle="{StaticResource ModernListViewItem}" Width="700">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource ModernGridViewColumnHeader}">
                            <GridViewColumn Header="ID Article" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#F1F5F9" CornerRadius="6" Padding="6,3">
                                            <TextBlock Text="{Binding ArticleID}" 
                                                     FontWeight="Bold" Foreground="#475569"
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Nom Article" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ArticleName}" 
                                                 FontWeight="SemiBold" Foreground="#1E293B"
                                                 TextWrapping="Wrap" FontSize="13"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Famille" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="8" Padding="8,4">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#F3F4F6" Offset="0"/>
                                                    <GradientStop Color="#E5E7EB" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="{Binding Famille}" 
                                                     FontSize="12" FontWeight="Medium"
                                                     Foreground="#374151" 
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Quantité" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#EFF6FF" CornerRadius="8" Padding="8,4">
                                            <TextBlock Text="{Binding QteArticle}" 
                                                     FontWeight="Bold" Foreground="#2563EB"
                                                     HorizontalAlignment="Center" FontSize="13"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Prix Unitaire" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding UnitPrice, StringFormat='C2', FallbackValue='0,00 €'}" 
                                                 FontSize="13" FontWeight="Medium" Foreground="#64748B"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Total" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Total, StringFormat='C2', FallbackValue='0,00 €'}" 
                                                 Style="{StaticResource AmountTextStyle}"
                                                 FontSize="14" FontWeight="Bold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Summary Panel -->
                <Border CornerRadius="12" Padding="20" Margin="0,20,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F8FAFC" Offset="0"/>
                            <GradientStop Color="#F1F5F9" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#E2E8F015" BlurRadius="8" ShadowDepth="2" Opacity="0.5"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Articles" FontSize="13" Foreground="#64748B" FontWeight="Medium"/>
                            <TextBlock x:Name="TotalArticlesText" Text="0" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Quantité totale" FontSize="13" Foreground="#64748B" FontWeight="Medium"/>
                            <TextBlock x:Name="TotalQuantityText" Text="0" FontSize="20" FontWeight="Bold" Foreground="#2563EB" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Total opération" FontSize="13" Foreground="#64748B" FontWeight="Medium"/>
                            <TextBlock x:Name="TotalAmountText" Text="0,00 €" FontSize="20" FontWeight="Bold" Margin="0,4,0,0">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#059669" Offset="0"/>
                                        <GradientStop Color="#047857" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>