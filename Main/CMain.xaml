<UserControl x:Class="Superete.Main.CMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- Modern Button Style for Dashboard Modules -->
        <Style x:Key="ModuleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="#E2E8F0" 
                                                  BlurRadius="8" 
                                                  ShadowDepth="2" 
                                                  Opacity="0.3"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Image placeholder above text -->
                                <Image x:Name="IconImage" Width="40" Height="40" Margin="0,0,0,10"
                                       Source="{TemplateBinding Tag}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                                <TextBlock x:Name="label" 
                                           Text="{TemplateBinding ToolTip}"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           LineHeight="16"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F7FAFC"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#CBD5E0" 
                                                          BlurRadius="12" 
                                                          ShadowDepth="4" 
                                                          Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EDF2F7"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#A0AEC0" 
                                                          BlurRadius="6" 
                                                          ShadowDepth="1" 
                                                          Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="Foreground" Value="#1A202C"/>
        </Style>

        <!-- Status Text Style -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#718096"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="40,30"
                BorderBrush="#E2E8F0" 
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="36" Height="36" Fill="#4299E1" Margin="0,0,12,0"/>
                    <TextBlock Text="BusinessHub Pro" 
                               Style="{StaticResource HeaderTextStyle}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Welcome back, " 
                               FontFamily="Segoe UI" 
                               FontSize="14" 
                               Foreground="#4A5568"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="John Smith" 
                               FontFamily="Segoe UI" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#2D3748"
                               VerticalAlignment="Center"
                               x:Name="Name"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Dashboard Title -->
            <TextBlock Grid.Row="0"
                       Text="Dashboard"
                       FontFamily="Segoe UI"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#2D3748"
                       Margin="0,0,0,30"/>

            <!-- Module Grid -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- First four modules -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ModuleButtonStyle}" Click="Button_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="images/revenu.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Sales and Revenue" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ModuleButtonStyle}" Tag="https://img.icons8.com/color/48/000000/box.png" Click="Button_Click_2">
                        <Button.Background>
                            <ImageBrush ImageSource="images/inventaire.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Inventory" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ModuleButtonStyle}" Tag="https://img.icons8.com/color/48/000000/customer.png" Click="Button_Click_4">
                        <Button.Background>
                            <ImageBrush ImageSource="images/customer-review.png" Stretch="Uniform" TileMode="Tile"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Customers" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Vertical" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ModuleButtonStyle}" Tag="https://img.icons8.com/color/48/000000/combo-chart.png" Click="Button_Click_3">
                        <Button.Background>
                            <ImageBrush ImageSource="images/diagramme-a-bandes.png" Stretch="Uniform" TileMode="None"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Analytics and reports" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="16" FontWeight="Bold" />
                </StackPanel>

                <!-- Last two modules, centered -->
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ModuleButtonStyle}" Click="Button_Click_5">
                        <Button.Background>
                            <ImageBrush ImageSource="images/management.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Project Management" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ModuleButtonStyle}" Click="Button_Click_1" >
                        <Button.Background>
                            <ImageBrush ImageSource="images/parametres.png" Stretch="Uniform"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="System Settings" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Footer/Status Bar -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="40,20"
                BorderBrush="#E2E8F0" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#48BB78" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="System Status: All systems operational" 
                               Style="{StaticResource StatusTextStyle}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Last updated: " 
                               Style="{StaticResource StatusTextStyle}"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="Today, 2:30 PM" 
                               Style="{StaticResource StatusTextStyle}"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    </UserControl>
