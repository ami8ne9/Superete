<Window x:Class="Superete.Main.FournisseurPage.WHistoryOperation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Operations History" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White"
        MinHeight="600"
        MinWidth="800">

    <Window.Effect>
        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="10" Opacity="0.3" BlurRadius="15"/>
    </Window.Effect>

    <Border Background="White" CornerRadius="15" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Operations History" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#2E3440"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="FournisseurNameLabel" 
                              Text="ABC Electronics"
                              FontSize="16" 
                              Foreground="#6B7280"/>
                </StackPanel>
                <Button x:Name="CloseButton" 
                       Content="✕" 
                       Width="30" 
                       Height="30"
                       HorizontalAlignment="Right"
                       Background="Transparent"
                       BorderThickness="0"
                       FontSize="16"
                       Foreground="#8B5A5A"
                       Cursor="Hand"
                       Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE5E5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Summary Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Operations Card -->
                <Border Grid.Column="0" 
                       Background="#F3F4F6" 
                       BorderBrush="#9CA3AF" 
                       BorderThickness="2" 
                       CornerRadius="12" 
                       Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total Operations" 
                                  FontSize="12" 
                                  FontWeight="SemiBold" 
                                  Foreground="#4B5563" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalOperationsLabel" 
                                  Text="12" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#4B5563"/>
                    </StackPanel>
                </Border>

                <!-- Total Credited Card -->
                <Border Grid.Column="2" 
                       Background="#EBF8FF" 
                       BorderBrush="#3B82F6" 
                       BorderThickness="2" 
                       CornerRadius="12" 
                       Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total Credited" 
                                  FontSize="12" 
                                  FontWeight="SemiBold" 
                                  Foreground="#1E40AF" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalCreditedLabel" 
                                  Text="5,000.00 DH" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#1E40AF"/>
                    </StackPanel>
                </Border>

                <!-- Total Paid Card -->
                <Border Grid.Column="4" 
                       Background="#F0FDF4" 
                       BorderBrush="#10B981" 
                       BorderThickness="2" 
                       CornerRadius="12" 
                       Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total Paid" 
                                  FontSize="12" 
                                  FontWeight="SemiBold" 
                                  Foreground="#059669" 
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalPaidHistoryLabel" 
                                  Text="2,500.00 DH" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#059669"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Filter and Search Section -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter Bar -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <TextBox x:Name="SearchTextBox"
                            Grid.Column="0"
                            Height="40"
                            Padding="15,10"
                            FontSize="14"
                            BorderThickness="2"
                            BorderBrush="#E5E7EB"
                            Background="#F9FAFB"
                            Text="Search operations...">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="8">
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                            Margin="{TemplateBinding Padding}"
                                                            VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Type Filter -->
                    <ComboBox x:Name="TypeFilterComboBox"
                             Grid.Column="2"
                             Width="150"
                             Height="40"
                             Padding="15,10"
                             FontSize="14"
                             BorderThickness="2"
                             BorderBrush="#E5E7EB"
                             Background="#F9FAFB">
                        <ComboBoxItem Content="All Types" IsSelected="True"/>
                        <ComboBoxItem Content="Credit"/>
                        <ComboBoxItem Content="Payment"/>
                        <ComboBoxItem Content="Update"/>
                    </ComboBox>

                    <!-- Export Button -->
                    <Button x:Name="ExportButton" 
                           Grid.Column="4"
                           Content="Export" 
                           Width="100" 
                           Height="40"
                           Background="#6366F1"
                           BorderThickness="0"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Cursor="Hand"
                           Click="ExportButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4F46E5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Operations List -->
                <Border Grid.Row="1" 
                       BorderBrush="#E5E7EB" 
                       BorderThickness="1" 
                       CornerRadius="12"
                       Background="White">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ListView x:Name="OperationsListView" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Date" Width="120" DisplayMemberBinding="{Binding Date}"/>
                                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Type}"/>
                                    <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding Description}"/>
                                    <GridViewColumn Header="Amount" Width="120" DisplayMemberBinding="{Binding Amount}"/>
                                    <GridViewColumn Header="Balance After" Width="120" DisplayMemberBinding="{Binding BalanceAfter}"/>
                                    <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="15,12"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#F3F4F6"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F9FAFB"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#EBF8FF"/>
                                            <Setter Property="BorderBrush" Value="#3B82F6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.Items>
                                <!-- Sample Data -->
                                <ListViewItem>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="2024-12-15" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#EBF8FF" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="Credit" FontSize="11" FontWeight="SemiBold" Foreground="#1E40AF"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="Purchase Invoice #INV-2024-001" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="+1,500.00 DH" VerticalAlignment="Center" Foreground="#1E40AF" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="4" Text="2,500.00 DH" VerticalAlignment="Center"/>
                                        <Border Grid.Column="5" Background="#F0FDF4" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="Active" FontSize="11" FontWeight="SemiBold" Foreground="#059669"/>
                                        </Border>
                                    </Grid>
                                </ListViewItem>
                                <ListViewItem>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="2024-12-10" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#F0FDF4" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="Payment" FontSize="11" FontWeight="SemiBold" Foreground="#059669"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="Payment received - Bank Transfer" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="-750.00 DH" VerticalAlignment="Center" Foreground="#059669" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="4" Text="1,750.00 DH" VerticalAlignment="Center"/>
                                        <Border Grid.Column="5" Background="#F0FDF4" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="Completed" FontSize="11" FontWeight="SemiBold" Foreground="#059669"/>
                                        </Border>
                                    </Grid>
                                </ListViewItem>
                                <ListViewItem>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="2024-12-05" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#FEF3C7" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="Update" FontSize="11" FontWeight="SemiBold" Foreground="#D97706"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Text="Fournisseur information updated" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="0.00 DH" VerticalAlignment="Center" Foreground="#6B7280"/>
                                        <TextBlock Grid.Column="4" Text="2,500.00 DH" VerticalAlignment="Center"/>
                                        <Border Grid.Column="5" Background="#F0FDF4" CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                            <TextBlock Text="Completed" FontSize="11" FontWeight="SemiBold" Foreground="#059669"/>
                                        </Border>
                                    </Grid>
                                </ListViewItem>
                            </ListView.Items>
                        </ListView>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="RefreshButton" 
                       Content="Refresh" 
                       Width="100" 
                       Height="40"
                       Margin="0,0,15,0"
                       Background="#F3F4F6"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       Cursor="Hand"
                       Click="RefreshButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E5E7EB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="CloseWindowButton" 
                       Content="Close" 
                       Width="100" 
                       Height="40"
                       Background="#6B7280"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Cursor="Hand"
                       Click="CloseWindowButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4B5563"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
