<UserControl x:Class="Superete.Main.FournisseurPage.CMainF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Superete.Main.FournisseurPage"
             Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="PaidButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="80"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Data Style -->
        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#343A40"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Card Style for Statistics -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#7C4DFF" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" Content="←" FontSize="24" Background="Transparent" 
                        Foreground="White" BorderThickness="0" Width="40" Height="40"
                        HorizontalAlignment="Left" VerticalAlignment="Center" Cursor="Hand" RenderTransformOrigin="0.55,0.425" Click="Button_Click"/>

                <!-- Title -->
                <TextBlock Grid.Column="1" Text="Fournisseur MANAGEMENT" 
                          FontSize="20" FontWeight="Bold" Foreground="White"
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Search and Filter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox Name="SearchTextBox" Width="200" Height="35" Margin="0,0,10,0"
                            Background="White" Padding="10,5" FontSize="14"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Foreground="Gray"
                              TextChanged="SearchTextBox_TextChanged"
                             />
                    <Button Content="🔍" Background="#FFC107" Width="35" Height="35"
                            BorderThickness="0" FontSize="16" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Total Fournisseurs Card -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Background="#E53E3E">
                <StackPanel Margin="0,0,0,-13">
                    <TextBlock Text="5" FontSize="36" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="FournisseurS" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="Active Fournisseurs" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Total Credit Card -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Background="#3182CE">
                <StackPanel>
                    <TextBlock Text="12,500.00 DH" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="TOTAL CREDIT" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="Outstanding Balance" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Paid This Month Card -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Background="#38A169" Height="120" Margin="0,0,20,0" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="8,750.00 DH" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="PAID THIS MONTH" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="Total Payments" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Pending Payments Card -->
            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" Background="#805AD5">
                <StackPanel>
                    <TextBlock Text="3,750.00 DH" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="PENDING" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                    <TextBlock Text="Awaiting Payment" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Add New Fournisseur Button -->
            <Button Grid.Column="4" Width="150" Height="80" Margin="20,20,10,20"
                    Background="#28A745" BorderThickness="0" 
                    Click="AddNewFournisseur_Click" Cursor="Hand" FontSize="22">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-12,0,0">
                                <TextBlock Text="+" FontSize="48" FontWeight="Bold" Foreground="White" Height="51"/>
                                <TextBlock Text="New Fournisseur" FontSize="18" FontWeight="SemiBold" 
                                          Foreground="White" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- Main Content Area -->
        <Border Grid.Row="2" Background="White" Margin="20,0,20,20" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" Direction="270" ShadowDepth="2" BlurRadius="8"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8,8,0,0" Margin="0,10,0,0">
                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="ID" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="Fournisseur NAME" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="PHONE NUMBER" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="ACTIONS" Style="{StaticResource HeaderTextStyle}"/>
                    </Grid>
                </Border>

                <!-- Table Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="FournisseurContainer"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Modal Overlay -->
        <Grid Name="ModalOverlay" Grid.RowSpan="3" Background="#80000000" Visibility="Collapsed">
            <ContentPresenter Name="ModalContent"/>
        </Grid>
    </Grid>
</UserControl>

