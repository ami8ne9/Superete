<UserControl x:Class="GestionComerce.Main.FournisseurPage.SingleRowSupplier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
             xmlns:local="clr-namespace:GestionComerce.Main.FournisseurPage"
             Height="60" Margin="0,0,0,1">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UpdateButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="PaidButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="80"/>
        </Style>

        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#343A40"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>

    <Border Background="White" BorderBrush="#E9ECEF" BorderThickness="0,0,0,1">
        <Border x:Name="HoverBorder" Background="White">
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <!-- ID -->
                    <ColumnDefinition Width="150"/>
                    <!-- SUPPLIER NAME -->
                    <ColumnDefinition Width="120"/>
                    <!-- PHONE -->
                    <ColumnDefinition Width="100"/>
                    <!-- CODE -->
                    <ColumnDefinition Width="130"/>
                    <!-- LEGAL STATUS -->
                    <ColumnDefinition Width="120"/>
                    <!-- ICE -->
                    <ColumnDefinition Width="150"/>
                    <!-- HEADQUARTERS -->
                    <ColumnDefinition Width="150"/>
                    <!-- ADDRESS -->
                    <ColumnDefinition Width="120"/>
                    <!-- BALANCE -->
                    <ColumnDefinition Width="*"/>
                    <!-- ACTIONS -->
                </Grid.ColumnDefinitions>

                <!-- Supplier ID -->
                <TextBlock x:Name="IdText" Grid.Column="0" Style="{StaticResource DataTextStyle}" 
                          FontWeight="SemiBold" Foreground="#6C757D"/>

                <!-- Supplier Name -->
                <TextBlock x:Name="NameText" Grid.Column="1" Style="{StaticResource DataTextStyle}" 
                          FontWeight="SemiBold"/>

                <!-- Phone Number -->
                <TextBlock x:Name="PhoneText" Grid.Column="2" Style="{StaticResource DataTextStyle}"/>

                <!-- Code -->
                <TextBlock x:Name="CodeText" Grid.Column="3" Style="{StaticResource DataTextStyle}"/>

                <!-- Legal Status (État Juridique) -->
                <TextBlock x:Name="EtatJuridicText" Grid.Column="4" Style="{StaticResource DataTextStyle}"/>

                <!-- ICE -->
                <TextBlock x:Name="ICEText" Grid.Column="5" Style="{StaticResource DataTextStyle}"/>

                <!-- Headquarters (Siège Entreprise) -->
                <TextBlock x:Name="HeadquartersText" Grid.Column="6" Style="{StaticResource DataTextStyle}"/>

                <!-- Address -->
                <TextBlock x:Name="AddressText" Grid.Column="7" Style="{StaticResource DataTextStyle}"/>

                <!-- Balance -->
                <TextBlock x:Name="BalanceText" Grid.Column="8" Style="{StaticResource DataTextStyle}" 
                          FontWeight="SemiBold"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="9" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource UpdateButtonStyle}" Content="Update" Click="Update_Click" Name="Update"/>
                    <Button Style="{StaticResource DeleteButtonStyle}" Content="Delete" Click="Delete_Click" Name="Delete"/>
                    <Button Style="{StaticResource PaidButtonStyle}" Content="Pay" Click="Paid_Click" Name="Paid"/>
                    <Button Style="{StaticResource OperationButtonStyle}" Content="Operations" Click="Operations_Click" Name="Operation"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>