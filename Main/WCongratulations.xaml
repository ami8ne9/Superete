<Window x:Class="Superete.Main.WCongratulations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Félicitations" Height="338" Width="500" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>
        <!-- OK Button Style -->
        <Style x:Key="OkButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="32,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" 
                                                Opacity="0.3" 
                                                ShadowDepth="2" 
                                                BlurRadius="8"
                                                Direction="270"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Animation -->
        <Storyboard x:Key="SuccessAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SuccessIcon" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1" To="1.1" Duration="0:0:1" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="SuccessIcon" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1" To="1.1" Duration="0:0:1" AutoReverse="True"/>
        </Storyboard>

        <!-- Confetti Animation -->
        <Storyboard x:Key="ConfettiAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Confetti1" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="-50" To="50" Duration="0:0:2" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Confetti2" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="-30" To="70" Duration="0:0:1.5" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Confetti3" 
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="-70" To="30" Duration="0:0:2.5" AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource SuccessAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ConfettiAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <Border x:Name="border" Background="White" CornerRadius="16" Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="320"
                          ShadowDepth="8" BlurRadius="24" Opacity="0.15"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Animated Confetti Background -->
            <Canvas Grid.RowSpan="3" IsHitTestVisible="False" ClipToBounds="True">
                <Rectangle x:Name="Confetti1" Width="8" Height="8" Fill="#FFD700" 
                          Canvas.Left="100" Canvas.Top="50" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TranslateTransform/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle x:Name="Confetti2" Width="6" Height="6" Fill="#FF6B6B" 
                          Canvas.Left="200" Canvas.Top="80" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TranslateTransform/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle x:Name="Confetti3" Width="10" Height="10" Fill="#4ECDC4" 
                          Canvas.Left="350" Canvas.Top="60" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TranslateTransform/>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Ellipse Width="7" Height="7" Fill="#95E1D3" 
                        Canvas.Left="150" Canvas.Top="40"/>
                <Ellipse Width="5" Height="5" Fill="#F38BA8" 
                        Canvas.Left="300" Canvas.Top="90"/>
                <Ellipse Width="9" Height="9" Fill="#A8E6CF" 
                        Canvas.Left="400" Canvas.Top="70"/>
            </Canvas>

            <!-- Header with Success Icon -->
            <Border Grid.Row="0" Background="Transparent" Padding="40,30,40,20">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Large Success Icon -->
                    <Border x:Name="SuccessIcon" 
                            Width="80" Height="80" 
                            Background="#10B981" 
                            CornerRadius="40"
                            HorizontalAlignment="Center"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform/>
                        </Border.RenderTransform>
                        <Border.Effect>
                            <DropShadowEffect Color="#10B981" 
                                            Opacity="0.3" 
                                            ShadowDepth="4" 
                                            BlurRadius="16"/>
                        </Border.Effect>
                        <!-- Checkmark Path -->
                        <Grid Width="32" Height="32">
                            <Path Data="M9 12l2 2 4-4" 
                                  Name="yes"
                                  Stroke="White" 
                                  StrokeThickness="3" 
                                  StrokeLineJoin="Round"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stretch="Uniform"
                                  Width="32" Height="32"/>
                            <Path Data="M9 3 L21 15 M21 3 L9 15" 
                                  Opacity="0"
                                  Name="no"
                                  Stroke="White" 
                                  StrokeThickness="3" 
                                  StrokeLineJoin="Round"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stretch="Uniform"
                                  Width="32" Height="32"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="0,0,0,34" HorizontalAlignment="Center">
                <!-- Main Title -->
                <TextBlock Text="Félicitations !" Name="Header"
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#1F2937"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,16"/>

                <!-- Subtitle -->
                <TextBlock x:Name="Message" 
                          Text="Votre transaction a été effectuée avec succès !" 
                          FontSize="18" 
                          Foreground="#6B7280"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"
                          TextWrapping="Wrap"
                          LineHeight="26"/>
            </StackPanel>

            <!-- Action Button -->
            <Border Grid.Row="2" Padding="40,0,40,30">
                <Button Content="Continue !" Name="btn"
                       Style="{StaticResource OkButton}"
                       Click="OkButton_Click"
                       HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>