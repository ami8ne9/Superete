<Window x:Class="Superete.Main.Facturation.WFacturePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        AllowsTransparency="True" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Width="800"
        Background="Transparent">
    <Border Background="Transparent" Padding="20">
        <Border Background="White" CornerRadius="10" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.25" 
                                BlurRadius="40" 
                                ShadowDepth="5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="0,0,0,10"
           Orientation="Horizontal" 
           HorizontalAlignment="Right"
           VerticalAlignment="Bottom">

                    <!-- Page Text Block -->
                    <TextBlock x:Name="PageNbr"
               Text="1"
               FontSize="25"
               FontWeight="Medium"
               Foreground="#4A5568"
               VerticalAlignment="Center"
               Margin="0,0,0,0"
               MinWidth="6"
               TextAlignment="Center"/>
                    <TextBlock x:Name="TotalPageNbr"
Text="/1"
FontSize="25"
FontWeight="Medium"
Foreground="#4A5568"
VerticalAlignment="Center"
Margin="0,0,15,0"
MinWidth="6"
TextAlignment="Center"/>

                    <!-- Previous Button -->
                    <Button x:Name="btnPrevious"
            Content="◀"
            Background="#E2E8F0"
            Foreground="#4A5568"
            BorderThickness="0"
            FontSize="14"
            FontWeight="Bold"
            Cursor="Hand"
            Padding="12,10"
            Width="40"
            Margin="0,0,4,0" Click="btnPrevious_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CBD5E0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#A0AEC0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Next Button -->
                    <Button x:Name="btnNext"
            Content="▶"
            Background="#E2E8F0"
            Foreground="#4A5568"
            BorderThickness="0"
            FontSize="14"
            FontWeight="Bold"
            Cursor="Hand"
            Padding="12,10"
            Width="40"
            Margin="0,0,12,0" Click="btnNext_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CBD5E0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#A0AEC0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Print Button -->
                    <Button x:Name="btnPrint"
            Content="Imprimer"
            Background="#38B2AC"
            Foreground="White"
            BorderThickness="0"
            FontSize="14"
            FontWeight="SemiBold"
            Cursor="Hand"
            Padding="16,10"
            Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#319795"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#2C7A7B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Save as PDF Button -->
                    <Button x:Name="btnSaveAsPDF"
            Content="Enregistrer comme PDF"
            Background="#805AD5"
            Foreground="White"
            BorderThickness="0"
            FontSize="14"
            FontWeight="SemiBold"
            Cursor="Hand"
            Padding="16,10"
            Margin="0,0,8,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#6B46C1"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#553C9A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Close Button -->
                    <Button Content="✕" 
            Width="40" 
            Height="40"
            Background="Transparent"
            Foreground="#718096"
            BorderThickness="0"
            FontSize="18"
            FontWeight="Bold"
            Cursor="Hand" 
            Click="Button_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F7FAFC"/>
                                        <Setter Property="Foreground" Value="#E53E3E"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#EDF2F7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="FacturesContainer">
                        <!--<Canvas Height="1200" Width="720">
                            <Image Source="/Main/images/1.jpg" Stretch="Fill" Height="1200" Width="720"/>

                            <StackPanel Orientation="Vertical" Canvas.Left="82" Canvas.Top="634" Background="AliceBlue" Width="562" Height="196" HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="ArticlesContainer">
                            </StackPanel>
                        </Canvas>-->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Border>
</Window>