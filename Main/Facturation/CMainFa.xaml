<UserControl x:Class="GestionComerce.Main.Facturation.CMainFa"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="800"
             Background="#F5F7FA" >

    <UserControl.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDE2E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4299E1"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDE2E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4299E1"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DDE2E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2D3748"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="40,30">
        <StackPanel MaxWidth="1000">

            <!-- Section 1: Header with Facture Title and Invoice Details -->
            <Border Background="White" 
        CornerRadius="12" 
        Padding="30,25"
        Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <!-- Back Button - Positioned absolutely in top-left -->
                    <Button x:Name="btnBack"
                Content="←"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#4A5568"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Padding="8,4"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="-5,-5,0,0" Click="btnBack_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F7FAFC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Main Content Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Facture Title -->
                        <TextBlock Text="Facture" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#1A202C"
                       VerticalAlignment="Center"/>

                        <!-- Right: Invoice Details -->
                        <StackPanel Grid.Column="1" MinWidth="300">
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Numéro de Facture" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtInvoiceNumber" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Date" Style="{StaticResource FieldLabel}"/>
                                    <DatePicker x:Name="dpInvoiceDate" 
                                  Style="{StaticResource ModernDatePicker}"/>
                                </StackPanel>
                            </Grid>
                            <StackPanel>
                                <TextBlock Text="Type" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbInvoiceType" 
                            Style="{StaticResource ModernComboBox}"
                            SelectedIndex="0">
                                    <ComboBoxItem Content="Facture"/>
                                    <ComboBoxItem Content="Bele"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Section 2: User Information -->
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="30,25"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Informations de l'Utilisateur" Style="{StaticResource SectionTitle}"/>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Nom" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="txtUserName" Style="{StaticResource ModernTextBox}" MaxLength="99"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Numéro ICE" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtUserICE" Style="{StaticResource ModernTextBox}" MaxLength="19"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Numéro VAT" Style="{StaticResource FieldLabel}" />
                            <TextBox x:Name="txtUserVAT" Style="{StaticResource ModernTextBox}" MaxLength="19"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Téléphone" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="txtUserPhone" Style="{StaticResource ModernTextBox}" MaxLength="19"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="État Juridique" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtUserEtatJuridique" Style="{StaticResource ModernTextBox}" MaxLength="100"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="ID de Société" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtUserIdSociete" Style="{StaticResource ModernTextBox}" MaxLength="50"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Siège d'Entreprise" Style="{StaticResource FieldLabel}"/>
                        <ComboBox x:Name="cmbUserSiegeEntreprise" 
                                  Style="{StaticResource ModernComboBox}"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="National"/>
                            <ComboBoxItem Content="International"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Adresse" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="txtUserAddress" MaxLength="199"
                                Style="{StaticResource ModernTextBox}"
                                Height="80"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalContentAlignment="Top"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right">
                        <Button Content="Save"  Margin="0,10,0,0"
                              Style="{StaticResource ModernButton}"
                              Background="#4299E1"
                              Foreground="White" Click="Button_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Section 3: Client Information -->
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="30,25"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>

                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="Informations de Client" 
                                 Style="{StaticResource SectionTitle}"
                                 Margin="0"/>
                        <Button x:Name="btnSelectClient"
                              Content="Sélectionner Client"
                              Style="{StaticResource ModernButton}"
                              Background="#4299E1"
                              Foreground="White"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top" Click="btnSelectClient_Click"/>
                    </Grid>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Nom" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="txtClientName" Style="{StaticResource ModernTextBox}" MaxLength="100"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Numéro ICE" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtClientICE" Style="{StaticResource ModernTextBox}" MaxLength="19"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Numéro VAT" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtClientVAT" Style="{StaticResource ModernTextBox}" MaxLength="19"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Téléphone" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="txtClientPhone" Style="{StaticResource ModernTextBox}" MaxLength="19"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="État Juridique" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtClientEtatJuridique" Style="{StaticResource ModernTextBox}" MaxLength="100"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="ID de Société" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtClientIdSociete" Style="{StaticResource ModernTextBox}" MaxLength="50"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Siège d'Entreprise" Style="{StaticResource FieldLabel}"/>
                        <ComboBox x:Name="cmbClientSiegeEntreprise" 
                                  Style="{StaticResource ModernComboBox}"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="National"/>
                            <ComboBoxItem Content="International"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Adresse" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="txtClientAddress" MaxLength="100"
                                Style="{StaticResource ModernTextBox}"
                                Height="80"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalContentAlignment="Top"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Section 4: Invoice Information -->
            <Border Background="White" 
        CornerRadius="12" 
        Padding="30,25"
        Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="Informations de Facturation" 
                     Style="{StaticResource SectionTitle}"
                     Margin="0"/>
                        <Button x:Name="btnSelectOperation"
                  Content="Sélectionner Opération"
                  Style="{StaticResource ModernButton}"
                  Background="#48BB78"
                  Foreground="White"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top" Click="btnSelectOperation_Click"/>
                    </Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="OperationContainer" MaxHeight="300">
                        </StackPanel>
                    </ScrollViewer>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="État de Facture" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="EtatFacture" 
                            Style="{StaticResource ModernComboBox}"
                            SelectedIndex="0">
                                    <ComboBoxItem Content="Normal"/>
                                    <ComboBoxItem Content="Reversed"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Devise" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtCurrency" MaxLength="20"
                           Style="{StaticResource ModernTextBox}"
                           Text="MAD"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Taux TVA (%)" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtTVARate" PreviewTextInput="DecimalTextBox_PreviewTextInput" MaxLength="18"
DataObject.Pasting="DecimalTextBox_Pasting" Style="{StaticResource ModernTextBox}" Text="20" TextChanged="txtTVARate_TextChanged"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Montant Total" Style="{StaticResource FieldLabel}"/>
                                <TextBox IsEnabled="False" x:Name="txtTotalAmount" Style="{StaticResource ModernTextBox}" TextChanged="txtTotalAmount_TextChanged"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Montant TVA" Style="{StaticResource FieldLabel}"/>
                                <TextBox IsEnabled="False" x:Name="txtTVAAmount" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Montant Apres TVA" Style="{StaticResource FieldLabel}"/>
                                <TextBox IsEnabled="False" x:Name="txtApresTVAAmount" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Index de Facture" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="IndexFacture" 
                            Style="{StaticResource ModernComboBox}"
                            SelectedIndex="0">
                                    <ComboBoxItem Content="0"/>
                                    <ComboBoxItem Content="1"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Type de Facture (cas multiple page)" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="TypeFacture" 
Style="{StaticResource ModernComboBox}"
SelectedIndex="0">
                                    <ComboBoxItem Content="Avec tete"/>
                                    <ComboBoxItem Content="Sans Tete"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Description" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtDescription" 
                       Style="{StaticResource ModernTextBox}"
                       Height="240"
                       TextWrapping="Wrap"
                       AcceptsReturn="True"
                       VerticalContentAlignment="Top"
                       VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Section 5: Action Buttons -->
            <Border Background="Transparent" 
                    CornerRadius="12" 
                    Padding="30,25"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                </Border.Effect>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnPreview"
                          Content="Aperçu"
                          Style="{StaticResource ModernButton}"
                          Background="#805AD5"
                          Foreground="White"
                          Margin="0,0,12,0"
                          MinWidth="120" Click="btnPreview_Click"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>