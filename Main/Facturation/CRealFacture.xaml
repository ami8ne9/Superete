<UserControl x:Class="Superete.Main.Facturation.CRealFacture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="1000"
             Background="#F5F7FA" Height="1382">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="AccentColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="TextColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="LightTextColor" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#BDC3C7"/>

        <Style x:Key="ModernTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernDatePicker" TargetType="{x:Type DatePicker}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ModernLabel" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="30,24" CornerRadius="8" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="FACTURE / INVOICE" FontSize="32" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryColor}"/>
                        <TextBlock Text="Facturation professionnelle" FontSize="14" 
                                   Foreground="{StaticResource LightTextColor}" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource ModernLabel}" Text="Numéro de facture"/>
                        <TextBox x:Name="txtInvoiceNumber" Style="{StaticResource ModernTextBox}" Width="200" Text="#INV-2025-001"/>

                        <TextBlock Style="{StaticResource ModernLabel}" Text="Date de facture" Margin="0,12,0,6"/>
                        <DatePicker x:Name="dpInvoiceDate" Style="{StaticResource ModernDatePicker}" Width="200"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Border Grid.Row="1" Background="White" Padding="30" CornerRadius="8">
                <StackPanel>
                    <!-- Supplier and Customer Information -->
                    <Grid Margin="0,0,0,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Supplier Info -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource SectionHeader}" Text="Fournisseur / Supplier"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Nom du fournisseur"/>
                            <TextBox x:Name="txtSupplierName" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Adresse"/>
                            <TextBox x:Name="txtSupplierAddress" Style="{StaticResource ModernTextBox}" Height="80" 
                                     TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalContentAlignment="Top" Margin="0,0,0,12"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="ICE"/>
                            <TextBox x:Name="txtSupplierICE" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Numéro de TVA / VAT Number"/>
                            <TextBox x:Name="txtSupplierVAT" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Customer Info -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Style="{StaticResource SectionHeader}" Text="Client / Customer"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Nom du client"/>
                            <TextBox x:Name="txtCustomerName" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Adresse"/>
                            <TextBox x:Name="txtCustomerAddress" Style="{StaticResource ModernTextBox}" Height="80" 
                                     TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalContentAlignment="Top" Margin="0,0,0,12"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="ICE (si applicable)"/>
                            <TextBox x:Name="txtCustomerICE" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Select Operation Section -->
                    <Border Background="{StaticResource SecondaryColor}" 
                            Padding="20" CornerRadius="6" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionHeader}" Text="Sélectionner une opération"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Rechercher une opération"/>
                            <TextBox x:Name="txtSearchOperation" Style="{StaticResource ModernTextBox}" 
                                     Margin="0,0,0,16" 
                                     TextChanged="TxtSearchOperation_TextChanged"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Liste des opérations" Margin="0,0,0,8"/>
                            <StackPanel x:Name="OperationContainer"/>
                        </StackPanel>
                    </Border>

                    <!-- Financial Summary -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>

                        <!-- Payment Terms and Reference -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Style="{StaticResource SectionHeader}" Text="Informations supplémentaires"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Conditions de paiement"/>
                            <TextBox x:Name="txtPaymentTerms" Style="{StaticResource ModernTextBox}" Height="60" 
                                    TextWrapping="Wrap" AcceptsReturn="True" 
                                    VerticalContentAlignment="Top" Margin="0,0,0,12"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Référence (pour les avoirs)"/>
                            <TextBox x:Name="txtReference" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                            <TextBlock Style="{StaticResource ModernLabel}" Text="Devise / Currency"/>
                            <ComboBox x:Name="cbCurrency" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="MAD - Dirham marocain" IsSelected="True"/>
                                <ComboBoxItem Content="EUR - Euro"/>
                                <ComboBoxItem Content="USD - Dollar américain"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Totals -->
                        <Border Grid.Column="1" Background="{StaticResource SecondaryColor}" 
                               Padding="24" CornerRadius="6">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Montant net" FontSize="14" 
                                              Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtTotalNet" Style="{StaticResource ModernTextBox}" 
                                            HorizontalAlignment="Right" Width="150" 
                                            IsReadOnly="True" Background="White"/>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <StackPanel>
                                        <TextBlock Text="TVA / VAT" FontSize="14" 
                                                  Foreground="{StaticResource TextColor}"/>
                                        <ComboBox x:Name="cbVATRate" Style="{StaticResource ModernComboBox}" Width="150" 
                                                 HorizontalAlignment="Left" Margin="0,6,0,0">
                                            <ComboBoxItem Content="20%" IsSelected="True"/>
                                            <ComboBoxItem Content="14%"/>
                                            <ComboBoxItem Content="10%"/>
                                            <ComboBoxItem Content="7%"/>
                                            <ComboBoxItem Content="0%"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <TextBox x:Name="txtVATAmount" Style="{StaticResource ModernTextBox}" 
                                            HorizontalAlignment="Right" Width="150" VerticalAlignment="Top"
                                            IsReadOnly="True" Background="White"/>
                                </Grid>

                                <Separator Margin="0,12" Background="{StaticResource BorderColor}"/>

                                <Grid>
                                    <TextBlock Text="TOTAL TTC" FontSize="18" FontWeight="Bold" 
                                              Foreground="{StaticResource PrimaryColor}" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtTotalTTC" Style="{StaticResource ModernTextBox}" 
                                            HorizontalAlignment="Right" Width="150" 
                                            IsReadOnly="True" Background="White"
                                            FontSize="18" FontWeight="Bold"
                                            Foreground="{StaticResource AccentColor}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Footer Note -->
                    <Border Background="#FFF9E6" Padding="16" CornerRadius="6" 
                           BorderBrush="#FFE082" BorderThickness="1" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" FontSize="13" Foreground="#F57C00" Margin="0,0,0,4">
                                <Run Text="⚠ Conservation des documents"/>
                            </TextBlock>
                            <TextBlock Text="Cette facture doit être conservée pendant 10 ans conformément à la législation marocaine." 
                                      FontSize="12" Foreground="#E65100" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnPreview" Content="Aperçu" Style="{StaticResource ModernButton}" 
                               Background="White" Foreground="{StaticResource PrimaryColor}"
                               BorderThickness="1" BorderBrush="{StaticResource BorderColor}" 
                               Margin="0,0,12,0"/>
                        <Button x:Name="btnSave" Content="Enregistrer" Style="{StaticResource ModernButton}" 
                               Margin="0,0,12,0"/>
                        <Button x:Name="btnGeneratePDF" Content="Générer PDF" Style="{StaticResource ModernButton}" 
                               Background="#27AE60"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>