<UserControl x:Class="GestionComerce.Main.Facturation.CreateFacture.CSingleMouvment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComerce.Main.Facturation"
             mc:Ignorable="d" Height="71" Width="Auto">
    <Border Background="White" 
        CornerRadius="8"
        Padding="20,15"
        Margin="0,0,0,10"
        Cursor="Hand">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                         Opacity="0.08" 
                         BlurRadius="15" 
                         ShadowDepth="2"/>
        </Border.Effect>
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F7FAFC"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Article Name -->
            <TextBlock x:Name="ArticleName"
                   Grid.Column="0"
                   Text="Nom du Client"
                   FontSize="15"
                   FontWeight="SemiBold"
                   Foreground="#2D3748"
                   VerticalAlignment="Center"/>

            <!-- Small Disabled Input -->
            <TextBox x:Name="NbrArticleExpide"
                     Grid.Column="1"
                     Width="60"
                     Height="28"
                     FontSize="12"
                     FontWeight="Medium"
                     Foreground="#A0AEC0"
                     Background="#F7FAFC"
                     BorderBrush="#E2E8F0"
                     BorderThickness="1"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     TextAlignment="Center"
                     Margin="15,0,15,0"
                     Padding="5,0"
                     Visibility="Collapsed"
                     TextChanged="NbrArticleExpide_TextChanged"
                     Text="0">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Article Quantity -->
            <TextBlock x:Name="ArticleQuantity"
                   Grid.Column="2"
                   Text="+212 6XX XXX XXX"
                   FontSize="14"
                   FontWeight="Medium"
                   Foreground="#718096"
                   VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>