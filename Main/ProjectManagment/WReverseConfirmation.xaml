<Window x:Class="Superete.Main.ProjectManagment.WReverseConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation d'annulation" Height="251" Width="450" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        ShowInTaskbar="False"
        WindowStyle="None">

    <Window.Resources>
        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Continue Button Style -->
        <Style x:Key="ContinueButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <Border x:Name="border" Background="White" CornerRadius="12" Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="320"
                          ShadowDepth="6" BlurRadius="20" Opacity="0.15"/>
        </Border.Effect>

        <Grid Margin="0,0,0,-7">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#F59E0B" CornerRadius="12,12,0,0" Padding="20,15" Margin="0,-5,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Warning Icon -->
                    <Border Grid.Column="0" Background="White" Width="28" Height="28" CornerRadius="14" Margin="0,0,12,0">
                        <TextBlock Text="?" FontSize="18" FontWeight="Bold" Foreground="#F59E0B" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Grid.Column="1" Text="Confirmation d'annulation" 
                              FontSize="16" FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="30,25,30,25">
                <TextBlock x:Name="MainMessage" 
                          Text="Êtes-vous sûr de vouloir reverser cette opération ?" 
                          FontSize="15" 
                          Foreground="#374151"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,12"
                          FontWeight="Medium"/>

                <TextBlock x:Name="SubMessage" 
                          Text="Toutes les données saisies seront perdues et vous reviendrez à l'écran précédent." 
                          FontSize="13" 
                          Foreground="#6B7280"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          LineHeight="18"/>
            </StackPanel>

            <!-- Buttons -->
            <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="0,0,12,12" Padding="20,15">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button x:Name="ContinueBtn"
                           Content="Continuer" 
                           Style="{StaticResource ContinueButton}"
                           Click="ContinueButton_Click"
                           Margin="0,0,15,0"
                           Width="100"/>

                    <Button x:Name="CancelBtn"
                           Content="Annuler" 
                           Style="{StaticResource CancelButton}"
                           Click="CancelButton_Click"
                           Width="100"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
