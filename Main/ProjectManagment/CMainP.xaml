<UserControl x:Class="Superete.Main.ProjectManagment.CMainP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC">

    <UserControl.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="24,16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,3"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="contentPresenter"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#374151"/>
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header with Tabs -->
            <RowDefinition Height="*"/>
            <!-- Content Area -->
        </Grid.RowDefinitions>

        <!-- Header with Navigation Tabs -->
        <!-- Header with Navigation Tabs -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Retour Button -->
                <Button Grid.Column="0" 
                Content="← Retour" 
                Style="{StaticResource SecondaryButtonStyle}"
                x:Name="RetourButton"
                Click="RetourButton_Click"
                Margin="16,8,16,8"
                VerticalAlignment="Center"/>

                <!-- Operations Button -->
                <Button Grid.Column="1" 
                Content="Opérations" 
                x:Name="OperationsButton"
                Click="OperationsButton_Click"
                Padding="24,16"
                FontSize="14"
                FontWeight="Medium"
                FontFamily="Segoe UI"
                Background="White"
                Foreground="#3B82F6"
                BorderThickness="0,0,0,3"
                BorderBrush="#3B82F6"
                Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Stock Movement Button -->
                <Button Grid.Column="2" 
                Content="Mouvement de Stock" 
                x:Name="StockButton"
                Click="StockButton_Click"
                Padding="24,16"
                FontSize="14"
                FontWeight="Medium"
                FontFamily="Segoe UI"
                Background="Transparent"
                Foreground="#6B7280"
                BorderThickness="0,0,0,3"
                BorderBrush="Transparent"
                Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                                                <Setter Property="Foreground" Value="#374151"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1" x:Name="OperationsContent">
            <!-- Operations Content -->
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Filters -->
                    <RowDefinition Height="*"/>
                    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Filtering Section -->
                <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- First Row - Search Section -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search Type Selector -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Rechercher par" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <ComboBox x:Name="SearchTypeFilter" Background="Transparent" BorderThickness="0" 
                            FontSize="13" Padding="12,8" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Operation ID" IsSelected="True"/>
                                        <ComboBoxItem Content="Client"/>
                                        <ComboBoxItem Content="Fournisseur"/>
                                        <ComboBoxItem Content="Utilisateur"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Search Input -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Recherche" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <TextBox x:Name="SearchInput" Background="Transparent" BorderThickness="0" 
                               Padding="16,0,48,0" FontSize="13" VerticalContentAlignment="Center" TextChanged="SearchInput_TextChanged" >
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F8FAFC"/>
                                                        </Trigger>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter Property="Background" Value="#F0F9FF"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>

                                        <TextBlock Text="Tapez pour rechercher..." Foreground="#9CA3AF" 
                                 Margin="16,0,48,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=SearchInput}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Search Icon -->
                                        <Button x:Name="SearchButton" 
                              Width="36" Height="36" HorizontalAlignment="Right" Margin="2"
                              Background="#F3F4F6" BorderThickness="0" Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3B82F6"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Ellipse Width="16" Height="16" Stroke="#6B7280" StrokeThickness="2" Fill="Transparent"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Second Row - Filter Controls -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Type Opération Filter -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Type Opération" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <ComboBox x:Name="TypeOperationFilter" Background="Transparent" BorderThickness="0" 
                            FontSize="13" Padding="12,8" VerticalContentAlignment="Center" SelectionChanged="TypeOperationFilter_SelectionChanged">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F8FAFC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBoxItem Content="Tout"/>
                                        <ComboBoxItem Content="Vente"/>
                                        <ComboBoxItem Content="Achat"/>
                                        <ComboBoxItem Content="Modification"/>
                                        <ComboBoxItem Content="Suppression"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Status Filter -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Status" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <ComboBox x:Name="StatusFilter" Background="Transparent" BorderThickness="0" 
                            FontSize="13" Padding="12,8" VerticalContentAlignment="Center">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F8FAFC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBoxItem Content="Tout" IsSelected="True"/>
                                        <ComboBoxItem Content="Normal"/>
                                        <ComboBoxItem Content="Reversed"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Date Filter -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Date" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <ComboBox x:Name="DateFilter" Background="Transparent" BorderThickness="0" 
                            FontSize="13" Padding="12,8" VerticalContentAlignment="Center">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F8FAFC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBoxItem Content="Tout" IsSelected="True"/>
                                        <ComboBoxItem Content="Today"/>
                                        <ComboBoxItem Content="Last Week"/>
                                        <ComboBoxItem Content="Last Month"/>
                                        <ComboBoxItem Content="Last 6 month"/>
                                        <ComboBoxItem Content="Last Year"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Clear Button -->
                            <Border Grid.Column="6" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1" 
                    Height="40" VerticalAlignment="Bottom">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                </Border.Effect>
                                <Button x:Name="ToutButton" Content="Tout Afficher" Click="ToutButton_Click"
                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                        FontSize="13" FontWeight="SemiBold" Foreground="#374151" 
                        Padding="20,0" VerticalContentAlignment="Center">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E5E7EB"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#D1D5DB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Dashboard and Operations Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="24,24,24,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Dashboard Cards -->
                        <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Nombre de Vente Card -->
                                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Nombre de Vente" 
                          FontSize="14" FontWeight="Medium" Foreground="#6B7280"/>
                                                <Ellipse Grid.Column="1" Width="12" Height="12" Fill="#10B981"/>
                                            </Grid>
                                            <TextBlock Text="127" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                            <TextBlock Text="+8 aujourd'hui" FontSize="12" Foreground="#10B981" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Nombre d'achat Card -->
                                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Nombre d'achat" 
                          FontSize="14" FontWeight="Medium" Foreground="#6B7280"/>
                                                <Ellipse Grid.Column="1" Width="12" Height="12" Fill="#3B82F6"/>
                                            </Grid>
                                            <TextBlock Text="45" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                            <TextBlock Text="+3 cette semaine" FontSize="12" Foreground="#3B82F6" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Finance Card -->
                                    <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Finance" 
                          FontSize="14" FontWeight="Medium" Foreground="#6B7280"/>
                                                <Ellipse Grid.Column="1" Width="12" Height="12" Fill="#059669"/>
                                            </Grid>
                                            <TextBlock Text="€18,742.35" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                            <TextBlock Text="Bénéfice net" FontSize="12" Foreground="#059669" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Second Row of Filters -->
                                
                            </Grid>
                        </Border>

                        <!-- Recent Operations -->
                        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Opérations récentes" 
                                              FontSize="18" FontWeight="SemiBold" Foreground="#1F2937"/>
                                </Grid>

                                <!-- Operations List -->
                                <StackPanel Name="OperationsContainer">
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- Stock Movement Content (Hidden by default) -->
            <ScrollViewer x:Name="StockContent" Visibility="Collapsed" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">
                    <!-- Stock Movement Header -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Mouvement de Stock" FontSize="24" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                <TextBlock Text="Gérez les entrées et sorties de votre inventaire" FontSize="14" Foreground="#6B7280"/>
                            </StackPanel>
                            <Button Grid.Column="1" Content="Nouveau Mouvement" Style="{StaticResource ActionButtonStyle}" VerticalAlignment="Top"/>
                        </Grid>
                    </Border>

                    <!-- Stock Summary -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Entrées aujourd'hui" FontSize="14" FontWeight="Medium" Foreground="#6B7280" Margin="0,0,0,12"/>
                                <TextBlock Text="127 articles" FontSize="24" FontWeight="Bold" Foreground="#10B981" Margin="0,0,0,8"/>
                                <TextBlock Text="Valeur: €1,847.23" FontSize="12" Foreground="#6B7280"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Sorties aujourd'hui" FontSize="14" FontWeight="Medium" Foreground="#6B7280" Margin="0,0,0,12"/>
                                <TextBlock Text="89 articles" FontSize="24" FontWeight="Bold" Foreground="#EF4444" Margin="0,0,0,8"/>
                                <TextBlock Text="Valeur: €1,234.56" FontSize="12" Foreground="#6B7280"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recent Stock Movements -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Mouvements récents" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#1F2937" Margin="0,0,0,20"/>

                            <!-- Stock Movement Items -->
                            <StackPanel>
                                <Border Background="#F0FDF4" BorderBrush="#BBF7D0" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#10B981" Width="32" Height="32" CornerRadius="16" Margin="0,0,16,0">
                                            <TextBlock Text="↗" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Réception marchandise" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937"/>
                                            <TextBlock Text="Produit ABC - Quantité: +50" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="+€750.00" FontSize="14" FontWeight="Bold" 
                                                  Foreground="#059669" VerticalAlignment="Center" Margin="0,0,16,0"/>
                                        <TextBlock Grid.Column="3" Text="10:30" FontSize="12" 
                                                  Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#EF4444" Width="32" Height="32" CornerRadius="16" Margin="0,0,16,0">
                                            <TextBlock Text="↙" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Vente" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937"/>
                                            <TextBlock Text="Produit XYZ - Quantité: -15" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="-€225.00" FontSize="14" FontWeight="Bold" 
                                                  Foreground="#DC2626" VerticalAlignment="Center" Margin="0,0,16,0"/>
                                        <TextBlock Grid.Column="3" Text="09:15" FontSize="12" 
                                                  Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="1" Visibility="Collapsed" x:Name="MouvmentContent">
            <!-- Operations Content -->
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Filters -->
                    <RowDefinition Height="*"/>
                    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Filtering Section -->
                <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- First Row - Search Section -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search Type Selector -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Rechercher " FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <ComboBox x:Name="SearchTypeMouvmentFilter" Background="Transparent" BorderThickness="0" 
                    FontSize="13" Padding="12,8" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Operation ID" IsSelected="True"/>
                                        <ComboBoxItem Content="Client"/>
                                        <ComboBoxItem Content="Fournisseur"/>
                                        <ComboBoxItem Content="Utilisateur"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Search Input -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Recherche" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <TextBox x:Name="SearchMouvmentInput" Background="Transparent" BorderThickness="0" 
                       Padding="16,0,48,0" FontSize="13" VerticalContentAlignment="Center">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F8FAFC"/>
                                                        </Trigger>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter Property="Background" Value="#F0F9FF"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>

                                        <TextBlock Text="Tapez pour rechercher..." Foreground="#9CA3AF" 
                         Margin="16,0,48,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=SearchInput}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Search Icon -->
                                        <Button x:Name="SearchMouvmentButton" 
                      Width="36" Height="36" HorizontalAlignment="Right" Margin="2"
                      Background="#F3F4F6" BorderThickness="0" Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3B82F6"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Ellipse Width="16" Height="16" Stroke="#6B7280" StrokeThickness="2" Fill="Transparent"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Second Row - Filter Controls -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Type Opération Filter -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Type Opération" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <ComboBox x:Name="TypeMouvmentFilter" Background="Transparent" BorderThickness="0" 
                    FontSize="13" Padding="12,8" VerticalContentAlignment="Center">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F8FAFC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBoxItem Content="Tout" IsSelected="True"/>
                                        <ComboBoxItem Content="Vente"/>
                                        <ComboBoxItem Content="Achat"/>
                                        <ComboBoxItem Content="Modification"/>
                                        <ComboBoxItem Content="Suppression"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Status Filter -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Status" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <ComboBox x:Name="StatusMouvmentFilter" Background="Transparent" BorderThickness="0" 
                    FontSize="13" Padding="12,8" VerticalContentAlignment="Center">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F8FAFC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBoxItem Content="Tout" IsSelected="True"/>
                                        <ComboBoxItem Content="Normal"/>
                                        <ComboBoxItem Content="Reversed"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Date Filter -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Date" FontSize="13" FontWeight="Medium" Foreground="#374151" Margin="0,0,0,6"/>
                                <Border Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Height="40">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                    </Border.Effect>
                                    <ComboBox x:Name="DateMouvmentFilter" Background="Transparent" BorderThickness="0" 
                    FontSize="13" Padding="12,8" VerticalContentAlignment="Center">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F8FAFC"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBoxItem Content="Tout" IsSelected="True"/>
                                        <ComboBoxItem Content="Today"/>
                                        <ComboBoxItem Content="Last Week"/>
                                        <ComboBoxItem Content="Last Month"/>
                                        <ComboBoxItem Content="Last 6 month"/>
                                        <ComboBoxItem Content="Last Year"/>
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <!-- Clear Button -->
                            <Border Grid.Column="6" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1" 
            Height="40" VerticalAlignment="Bottom">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.03" ShadowDepth="1" BlurRadius="3"/>
                                </Border.Effect>
                                <Button x:Name="ToutMouvmentButton" Content="Tout Afficher" Click="ToutButton_Click"
                Background="Transparent" BorderThickness="0" Cursor="Hand"
                FontSize="13" FontWeight="SemiBold" Foreground="#374151" 
                Padding="20,0" VerticalContentAlignment="Center">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E5E7EB"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#D1D5DB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Dashboard and Operations Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="24,24,24,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Dashboard Cards -->
                        <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="24,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Nombre de Vente Card -->
                                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Nombre de Vente" 
                  FontSize="14" FontWeight="Medium" Foreground="#6B7280"/>
                                                <Ellipse Grid.Column="1" Width="12" Height="12" Fill="#10B981"/>
                                            </Grid>
                                            <TextBlock Text="127" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                            <TextBlock Text="+8 aujourd'hui" FontSize="12" Foreground="#10B981" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Nombre d'achat Card -->
                                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Nombre d'achat" 
                  FontSize="14" FontWeight="Medium" Foreground="#6B7280"/>
                                                <Ellipse Grid.Column="1" Width="12" Height="12" Fill="#3B82F6"/>
                                            </Grid>
                                            <TextBlock Text="45" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                            <TextBlock Text="+3 cette semaine" FontSize="12" Foreground="#3B82F6" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Finance Card -->
                                    <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Finance" 
                  FontSize="14" FontWeight="Medium" Foreground="#6B7280"/>
                                                <Ellipse Grid.Column="1" Width="12" Height="12" Fill="#059669"/>
                                            </Grid>
                                            <TextBlock Text="€18,742.35" FontSize="28" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                            <TextBlock Text="Bénéfice net" FontSize="12" Foreground="#059669" FontWeight="Medium"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- Second Row of Filters -->

                            </Grid>
                        </Border>

                        <!-- Recent Operations -->
                        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Opérations récentes" 
                                      FontSize="18" FontWeight="SemiBold" Foreground="#1F2937"/>
                                </Grid>

                                <!-- Operations List -->
                                <StackPanel Name="MouvmentContainer">
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- Stock Movement Content (Hidden by default) -->
            <ScrollViewer x:Name="MouvmenttContent" Visibility="Collapsed" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">
                    <!-- Stock Movement Header -->
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Mouvement de Stock" FontSize="24" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                                <TextBlock Text="Gérez les entrées et sorties de votre inventaire" FontSize="14" Foreground="#6B7280"/>
                            </StackPanel>
                            <Button Grid.Column="1" Content="Nouveau Mouvement" Style="{StaticResource ActionButtonStyle}" VerticalAlignment="Top"/>
                        </Grid>
                    </Border>

                    <!-- Stock Summary -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Entrées aujourd'hui" FontSize="14" FontWeight="Medium" Foreground="#6B7280" Margin="0,0,0,12"/>
                                <TextBlock Text="127 articles" FontSize="24" FontWeight="Bold" Foreground="#10B981" Margin="0,0,0,8"/>
                                <TextBlock Text="Valeur: €1,847.23" FontSize="12" Foreground="#6B7280"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Sorties aujourd'hui" FontSize="14" FontWeight="Medium" Foreground="#6B7280" Margin="0,0,0,12"/>
                                <TextBlock Text="89 articles" FontSize="24" FontWeight="Bold" Foreground="#EF4444" Margin="0,0,0,8"/>
                                <TextBlock Text="Valeur: €1,234.56" FontSize="12" Foreground="#6B7280"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recent Stock Movements -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Mouvements récents" FontSize="18" FontWeight="SemiBold" 
                              Foreground="#1F2937" Margin="0,0,0,20"/>

                            <!-- Stock Movement Items -->
                            <StackPanel>
                                <Border Background="#F0FDF4" BorderBrush="#BBF7D0" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#10B981" Width="32" Height="32" CornerRadius="16" Margin="0,0,16,0">
                                            <TextBlock Text="↗" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Réception marchandise" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937"/>
                                            <TextBlock Text="Produit ABC - Quantité: +50" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="+€750.00" FontSize="14" FontWeight="Bold" 
                                          Foreground="#059669" VerticalAlignment="Center" Margin="0,0,16,0"/>
                                        <TextBlock Grid.Column="3" Text="10:30" FontSize="12" 
                                          Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#EF4444" Width="32" Height="32" CornerRadius="16" Margin="0,0,16,0">
                                            <TextBlock Text="↙" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Vente" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937"/>
                                            <TextBlock Text="Produit XYZ - Quantité: -15" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="-€225.00" FontSize="14" FontWeight="Bold" 
                                          Foreground="#DC2626" VerticalAlignment="Center" Margin="0,0,16,0"/>
                                        <TextBlock Grid.Column="3" Text="09:15" FontSize="12" 
                                          Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>