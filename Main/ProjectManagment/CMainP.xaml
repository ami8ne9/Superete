                                        <TextBlock Grid.Column="3" Text="10:30" FontSize="12" 
                                          Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#EF4444" Width="32" Height="32" CornerRadius="16" Margin="0,0,16,0">
                                            <TextBlock Text="↙" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Vente" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937"/>
                                            <TextBlock Text="Produit XYZ - Quantité: -15" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="-€225.00" FontSize="14" FontWeight="Bold" 
                                          Foreground="#DC2626" VerticalAlignment="Center" Margin="0,0,16,0"/>
                                        <TextBlock Grid.Column="3" Text="09:15" FontSize="12" 
                                          Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid Background="#F5F7FA" Grid.Row="1" x:Name="RapportContent" Visibility="Collapsed">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Page Title -->
            <TextBlock Grid.Row="0" 
               Text="Rapports" 
               FontSize="28" 
               FontWeight="Bold" 
               Foreground="#2C3E50"
               Margin="30,30,30,20"/>

            <!-- Filter Buttons -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="30,0,30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="DayButton" 
                    Grid.Column="0"
                    Style="{StaticResource SelectedFilterButtonStyle}"
                    Click="DayButton_Click"
                    Height="50">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19 3h-1V1h-2v2H8V1H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11z" 
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                          Stretch="Uniform" 
                          Width="18" 
                          Height="18" 
                          Margin="0,0,8,0"/>
                            <TextBlock Text="Jour" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="MonthButton" 
                    Grid.Column="2"
                    Style="{StaticResource FilterButtonStyle}"
                    Click="MonthButton_Click"
                    Height="50">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm2-7h-1V2h-2v2H8V2H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z" 
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                          Stretch="Uniform" 
                          Width="18" 
                          Height="18" 
                          Margin="0,0,8,0"/>
                            <TextBlock Text="Mois" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="YearButton" 
                    Grid.Column="4"
                    Style="{StaticResource FilterButtonStyle}"
                    Click="YearButton_Click"
                    Height="50">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M17 12h-5v5h5v-5zM16 1v2H8V1H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-1V1h-2zm3 18H5V8h14v11z" 
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                          Stretch="Uniform" 
                          Width="18" 
                          Height="18" 
                          Margin="0,0,8,0"/>
                            <TextBlock Text="Année" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="CustomButton" 
                    Grid.Column="6"
                    Style="{StaticResource FilterButtonStyle}"
                    Click="CustomButton_Click"
                    Height="50">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M11 17c0 .55.45 1 1 1s1-.45 1-1-.45-1-1-1-1 .45-1 1zm0-14v4h2V5.08c3.39.49 6 3.39 6 6.92 0 3.87-3.13 7-7 7s-7-3.13-7-7c0-1.68.59-3.22 1.58-4.42L12 13l1.41-1.41-6.8-6.8v.02C4.42 6.45 3 9.05 3 12c0 4.97 4.02 9 9 9 4.97 0 9-4.03 9-9s-4.03-9-9-9h-1zm7 9c0-.55-.45-1-1-1s-1 .45-1 1 .45 1 1 1 1-.45 1-1zM6 12c0 .55.45 1 1 1s1-.45 1-1-.45-1-1-1-1 .45-1 1z" 
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                          Stretch="Uniform" 
                          Width="18" 
                          Height="18" 
                          Margin="0,0,8,0"/>
                            <TextBlock Text="Personnalisé" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Date Pickers Section -->
            

            <!-- Statistics Display Area -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="30,0,30,30">
                <StackPanel>
                    <!-- Summary Cards -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Revenue Card -->
                        <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Revenu Total" 
                                   FontSize="12" 
                                   Foreground="#999999"
                                   Margin="0,0,0,10"/>
                                <TextBlock x:Name="TotalRevenueText"
                                   Text="0.00 DH" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#4CAF50"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Path Data="M7 14l5-5 5 5z" 
                                  Fill="#4CAF50"
                                  Stretch="Uniform"
                                  Width="16"
                                  Height="16"
                                  Margin="0,0,5,0"/>
                                    <TextBlock Text="+12.5%" 
                                       FontSize="12" 
                                       Foreground="#4CAF50"
                                       FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Total Orders Card -->
                        <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Commandes" 
                                   FontSize="12" 
                                   Foreground="#999999"
                                   Margin="0,0,0,10"/>
                                <TextBlock x:Name="TotalOrdersText"
                                   Text="0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#4A90E2"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Path Data="M7 14l5-5 5 5z" 
                                  Fill="#4A90E2"
                                  Stretch="Uniform"
                                  Width="16"
                                  Height="16"
                                  Margin="0,0,5,0"/>
                                    <TextBlock Text="+8.3%" 
                                       FontSize="12" 
                                       Foreground="#4A90E2"
                                       FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Average Order Card -->
                        <Border Grid.Column="4" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Panier Moyen" 
                                   FontSize="12" 
                                   Foreground="#999999"
                                   Margin="0,0,0,10"/>
                                <TextBlock x:Name="AverageOrderText"
                                   Text="0.00 DH" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#FF9800"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Path Data="M7 10l5 5 5-5z" 
                                  Fill="#FF9800"
                                  Stretch="Uniform"
                                  Width="16"
                                  Height="16"
                                  Margin="0,0,5,0"/>
                                    <TextBlock Text="-2.1%" 
                                       FontSize="12" 
                                       Foreground="#FF9800"
                                       FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Total Customers Card -->
                        <Border Grid.Column="6" Style="{StaticResource StatCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Clients" 
                                   FontSize="12" 
                                   Foreground="#999999"
                                   Margin="0,0,0,10"/>
                                <TextBlock x:Name="TotalCustomersText"
                                   Text="0" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#9C27B0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Path Data="M7 14l5-5 5 5z" 
                                  Fill="#9C27B0"
                                  Stretch="Uniform"
                                  Width="16"
                                  Height="16"
                                  Margin="0,0,5,0"/>
                                    <TextBlock Text="+5.7%" 
                                       FontSize="12" 
                                       Foreground="#9C27B0"
                                       FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Detailed Stats Section -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Détails des Ventes" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,20"/>

                            <!-- Chart Placeholder -->
                            <Border Background="#F8F9FA" 
                            CornerRadius="8" 
                            Height="300" 
                            Margin="0,0,0,20">
                                <TextBlock Text="📊 Graphique des ventes" 
                                   FontSize="16" 
                                   Foreground="#CCCCCC"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                            </Border>

                            <!-- Top Products -->
                            <TextBlock Text="Produits les plus vendus" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>

                            <ItemsControl x:Name="TopProductsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" 
                                        CornerRadius="8" 
                                        Padding="15" 
                                        Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                   Text="{Binding Rank}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold"
                                                   Foreground="#4A90E2"
                                                   Width="30"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ProductName}" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#2C3E50"/>
                                                    <TextBlock Text="{Binding Quantity, StringFormat='Quantité: {0}'}" 
                                                       FontSize="12" 
                                                       Foreground="#999999"
                                                       Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" 
                                                   Text="{Binding Revenue, StringFormat='{}{0:N2} DH'}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Foreground="#4CAF50"
                                                   VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>