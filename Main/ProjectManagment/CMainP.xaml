                                <TextBlock Text="Nombre total" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                        </Border>

                        <!-- Bought Operations -->
                        <Border Grid.Column="6" Background="White" CornerRadius="12" Padding="24" BorderThickness="1" BorderBrush="#E8E8E8">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="20" ShadowDepth="0"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Opérations Achat" FontSize="13" Foreground="#999999" Margin="0,0,0,12" FontWeight="Medium"/>
                                <TextBlock x:Name="BoughtOpsText" Text="0" FontSize="28" FontWeight="Bold" Foreground="#9C27B0" Margin="0,0,0,8"/>
                                <TextBlock Text="Nombre total" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                        </Border>
