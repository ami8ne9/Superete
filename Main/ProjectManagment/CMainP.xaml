                            </StackPanel>
                        </Border>

                        <!-- Sold Card -->
                        <Border Grid.Column="4" Background="White" CornerRadius="12" Padding="24" BorderThickness="1" BorderBrush="#E8E8E8">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="20" ShadowDepth="0"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Vendu" FontSize="13" Foreground="#999999" Margin="0,0,0,12" FontWeight="Medium"/>
