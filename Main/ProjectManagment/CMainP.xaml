                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Statistics Display Area -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Margin="30,0,30,30">
                <StackPanel>
                    <!-- KPI Cards Grid -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Revenue Card -->
                        <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="24" BorderThickness="1" BorderBrush="#E8E8E8">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="20" ShadowDepth="0"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Revenu" FontSize="13" Foreground="#999999" Margin="0,0,0,12" FontWeight="Medium"/>
                                <TextBlock x:Name="RevenueText" Text="0.00 DH" FontSize="28" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,0,8"/>
                                <TextBlock Text="Ventes totales" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                        </Border>

                        <!-- Bought Card -->
                        <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="24" BorderThickness="1" BorderBrush="#E8E8E8">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="20" ShadowDepth="0"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Acheté" FontSize="13" Foreground="#999999" Margin="0,0,0,12" FontWeight="Medium"/>
                                <TextBlock x:Name="BoughtText" Text="0.00 DH" FontSize="28" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,8"/>
