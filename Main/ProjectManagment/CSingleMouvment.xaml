<UserControl x:Class="Superete.Main.ProjectManagment.CSingleMouvment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto">

    <UserControl.Resources>
        <!-- Reverse Button Style -->
        <Style x:Key="ReverseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FEF2F2"/>
            <Setter Property="Foreground" Value="#DC2626"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FECACA"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FEE2E2"/>
                                <Setter Property="BorderBrush" Value="#FCA5A5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FECACA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Background" Value="#E5E7EB"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Content" Value="Reversed"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" 
            Padding="20,16" Margin="0" Cursor="Hand">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F8FAFC"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Indicator -->
                <ColumnDefinition Width="2*"/>
                <!-- Article Name -->
                <ColumnDefinition Width="1.5*"/>
                <!-- Operation ID -->
                <ColumnDefinition Width="1*"/>
                <!-- Quantity -->
                <ColumnDefinition Width="Auto"/>
                <!-- Reversed Status -->
            </Grid.ColumnDefinitions>

            <!-- Movement Indicator -->
            <Border Grid.Column="0" x:Name="IndicatorBorder" 
                    Background="#10B981" Width="36" Height="36" 
                    CornerRadius="18" Margin="0,0,16,0" VerticalAlignment="Center">
                <TextBlock x:Name="IndicatorIcon" Text="↗" 
                          FontSize="18" Foreground="White" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Article Name -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="ArticleName" Text="Produit Premium ABC" 
                          FontSize="14" FontWeight="SemiBold" Foreground="#1F2937" 
                          TextTrimming="CharacterEllipsis"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="OperationType" Text="Stock Entry • " 
          FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"
          TextTrimming="CharacterEllipsis"/>
                    <TextBlock x:Name="Fournisseur" Text=" Fournisseur XYZ" 
          FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"
          TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </StackPanel>

            <!-- Operation ID -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0">
                <TextBlock Text="Opération" FontSize="11" Foreground="#9CA3AF" Margin="0,0,0,2"/>
                <Border Background="#F3F4F6" CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                    <TextBlock x:Name="OperationId" Text="#OP-2024-1234" 
                              FontSize="12" FontWeight="Medium" Foreground="#374151"
                              FontFamily="Consolas, Monaco, monospace"/>
                </Border>
            </StackPanel>

            <!-- Quantity -->
            <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="16,0,0,0">
                <TextBlock Text="Quantite" FontSize="11" Foreground="#9CA3AF" Margin="0,0,0,2" Name="Quantite"/>
                <TextBlock x:Name="Quantity" Text="+50" 
                          FontSize="16" FontWeight="Bold" Foreground="#059669"/>
            </StackPanel>

            <!-- Reversed Status/Button -->
            <Border Grid.Column="4" VerticalAlignment="Center" Margin="16,0,0,0">
                <StackPanel x:Name="ReversedContainer">
                    <!-- Normal State: Show Reverse Button -->
                    <Button x:Name="ReverseButton" Content="Reverse" 
                            Style="{StaticResource ReverseButtonStyle}"
                            Click="ReverseButton_Click"
                            Visibility="Visible"/>

                    <!-- Reversed State: Show Badge -->
                    <Border x:Name="ReversedBadge" Background="#FEE2E2" 
                            BorderBrush="#FECACA" BorderThickness="1" 
                            CornerRadius="4" Padding="10,6"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#DC2626" Margin="0,0,6,0"/>
                            <TextBlock Text="REVERSED" FontSize="11" FontWeight="Bold" 
                                      Foreground="#DC2626" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>