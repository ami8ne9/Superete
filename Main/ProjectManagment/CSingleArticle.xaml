<UserControl x:Class="Superete.Main.ProjectManagment.CSingleArticle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Superete.Main.ProjectManagment"
             mc:Ignorable="d" d:DesignWidth="800" Height="54">
    <UserControl.Resources>
        <Style x:Key="ArticleCellStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="12,8">
            <TextBlock Text="Produit Premium ABC" FontSize="13" FontWeight="Medium" Foreground="#1F2937" Name="ArticleName"/>
            <TextBlock Text="Code: ABC-123" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0" Name="ArticleCode"/>
        </StackPanel>
        <TextBlock Grid.Column="1" Text="2" Style="{StaticResource ArticleCellStyle}" TextAlignment="Center" Name="ArticleQuantity"/>
        <TextBlock Grid.Column="2" Text="€35.00" Style="{StaticResource ArticleCellStyle}" TextAlignment="Right" Name="ArticleUnitaryPrice"/>
        <TextBlock Grid.Column="3" Text="€70.00" Style="{StaticResource ArticleCellStyle}" TextAlignment="Right" FontWeight="SemiBold" Name="ArticleTotalPrice"/>
    </Grid>


</UserControl>
