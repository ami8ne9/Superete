<UserControl x:Class="Superete.Main.Vente.CSingleClient" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="81">

    <Border Background="White"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            CornerRadius="8"
            Margin="0,3,0,3">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="270" 
                              ShadowDepth="2" 
                              BlurRadius="8" 
                              Opacity="0.08"/>
        </Border.Effect>

        <Grid Margin="16,10" MouseLeftButtonDown="ClientClicked" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Client ID (Read-only like DataGrid) -->
            <TextBlock Grid.Column="0"
                       Padding="8"
                       VerticalAlignment="Center"
                       FontFamily="Consolas, Monaco, monospace"
                       Background="#F3F4F6"
                       Foreground="#6B7280"
                       FontWeight="Medium"
                       x:Name="ClientID"
                       />

            <!-- Client Name -->
            <TextBlock Grid.Column="1"
                       Padding="8"
                       VerticalAlignment="Center"
                       Margin="8,0"
                       FontWeight="SemiBold"
                       Foreground="#1F2937"
                       x:Name="Name"
                       />

            <!-- Telephone -->
            <TextBlock Grid.Column="2"
                       Padding="8"
                       VerticalAlignment="Center"
                       Margin="10,0,8,0"
                       FontFamily="Consolas, Monaco, monospace"
                       Foreground="#059669"
                       FontWeight="Medium" x:Name="Telephone"
                       />

            <!-- Action Buttons -->
            <StackPanel Grid.Column="3"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <!-- Save Button -->
                <!-- Delete Button -->
            </StackPanel>
        </Grid>

        <!-- Hover Effect -->
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                    To="#3B82F6"
                                                    Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                    To="#E5E7EB"
                                                    Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
    </Border>
</UserControl>
