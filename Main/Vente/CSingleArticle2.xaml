<UserControl x:Class="GestionComerce.Main.Vente.CSingleArticle2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComerce.Main.Vente"
             mc:Ignorable="d">
    <Grid Height="20" MouseLeftButtonDown="SelectedArticleClicked">
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="Transparent"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F8FAFC"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <!-- Article Name -->
            <ColumnDefinition Width="1*"/>
            <!-- Fournisseur -->
            <ColumnDefinition Width="40"/>
            <!-- Prix -->
            <ColumnDefinition Width="40"/>
            <!-- Quantite -->
            <ColumnDefinition Width="60"/>
            <!-- Total -->
        </Grid.ColumnDefinitions>
        
        <TextBlock x:Name="ArticleName" 
                   Grid.Column="0" 
                   FontSize="12" 
                   Foreground="#1F2937" 
                   VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis"
                   Padding="2,0"/>
                   
        <TextBlock x:Name="Fournisseur" 
                   Grid.Column="1" 
                   FontSize="11" 
                   Foreground="#6B7280" 
                   VerticalAlignment="Center"
                   TextTrimming="CharacterEllipsis"
                   Padding="2,0"/>
                   
        <TextBlock x:Name="Prix" 
                   Grid.Column="2" 
                   FontSize="11" 
                   Foreground="#059669" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Padding="2,0"/>
                   
        <TextBlock x:Name="Quantite" 
                   Grid.Column="3" 
                   FontSize="11" 
                   Foreground="#374151" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Padding="2,0" />
                   
        <TextBlock x:Name="Total" 
                   Grid.Column="4" 
                   FontSize="11" 
                   Foreground="#DC2626" 
                   FontWeight="Medium"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right" Width="50"
                   Padding="2,0" Margin="0,0,0,0"/>
    </Grid>
</UserControl>