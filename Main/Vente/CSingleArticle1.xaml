<UserControl x:Class="GestionComerce.Main.Vente.CSingleArticle1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="White">

    <Grid Height="48" 
          MouseLeftButtonDown="ArticleClicked" 
          Margin="0,0,0,2"
          Background="White"
          Cursor="Hand">

        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F8FAFC"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <Border BorderBrush="#E5E7EB" 
                BorderThickness="0,0,0,1" 
                CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" MinWidth="80" x:Name="ArticleIDC" />
                    <ColumnDefinition Width="2*" MinWidth="150" x:Name="ArticleNameC" />
                    <ColumnDefinition Width="80" MinWidth="80" x:Name="QuantiteC" />
                    <ColumnDefinition Width="100" MinWidth="100" x:Name="PrixAchatC" />
                    <ColumnDefinition Width="100" MinWidth="100" x:Name="PrixVenteC"/>
                    <ColumnDefinition Width="100" MinWidth="100"  x:Name="PrixMPC" />
                    <ColumnDefinition Width="80" MinWidth="80" x:Name="FamilleC" />
                    <ColumnDefinition Width="120" MinWidth="120" x:Name="FournisseurNameC" />
                    <ColumnDefinition Width="100" MinWidth="100" x:Name="CodeC" />
                </Grid.ColumnDefinitions>

                <!-- Article ID -->
                <TextBlock x:Name="ArticleID" 
                           Grid.Column="0"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           Foreground="#374151"/>

                <!-- Article Name -->
                <TextBlock x:Name="ArticleName" 
                           Grid.Column="1"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Quantité -->
                <TextBlock x:Name="Quantite" 
                           Grid.Column="2"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           Foreground="#374151"/>

                <!-- Prix Achat -->
                <TextBlock x:Name="PrixAchat" 
                           Grid.Column="3"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           FontWeight="Medium"
                           Foreground="#059669"/>

                <!-- Prix Vente -->
                <TextBlock x:Name="PrixVente" 
                           Grid.Column="4"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           FontWeight="Medium"
                           Foreground="#DC2626"/>

                <!-- Prix MP -->
                <TextBlock x:Name="PrixMP" 
                           Grid.Column="5"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           FontWeight="Medium"
                           Foreground="#7C3AED"/>

                <!-- Famille -->
                <TextBlock x:Name="Famille" 
                           Grid.Column="6"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           Foreground="#374151"/>

                <!-- Fournisseur -->
                <TextBlock x:Name="FournisseurName" 
                           Grid.Column="7"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI"
                           FontSize="13"
                           FontWeight="Medium"
                           Foreground="#1F2937"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Code -->
                <TextBlock x:Name="Code" 
                           Grid.Column="8"
                           Text=""
                           Padding="8,0"
                           VerticalAlignment="Center"
                           FontFamily="Consolas, Monaco, monospace"
                           FontSize="13"
                           Foreground="#374151"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>